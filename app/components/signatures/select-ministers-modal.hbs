<Auk::Modal @size="medium">
  <Auk::Modal::Header
    @title={{t "to-sign-by"}}
    @onClose={{@onCancel}}
    @closeDisabled={{@loading}}
  />
  <Auk::Modal::Body>
    <Mandatees::CheckboxList
      @selected={{this.selectedMinisters}}
      @onChange={{fn (mut this.selectedMinisters)}}
      @allowPartialMatch={{true}}
    />
  </Auk::Modal::Body>
  <Auk::Modal::Footer @onCancel={{@onCancel}} @cancelDisabled={{@loading}}>
    <AuButton
      data-test-signatures-select-ministers-apply
      @loading={{@loading}}
      {{on "click" (fn @onConfirm this.selectedMinisters)}}
    >
      {{t "apply"}}
    </AuButton>
  </Auk::Modal::Footer>
</Auk::Modal>
