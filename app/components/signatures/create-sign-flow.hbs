{{#if @isReportOrMinutes}}
  <Signatures::CreateSignFlow::ReportOrMinutes
    @decisionActivities={{@decisionActivities}}
    @onChangeSigners={{@onChangeSigners}}
  />
{{else if @isRatification}}
  <Signatures::CreateSignFlow::Ratification
    @decisionActivities={{@decisionActivities}}
    @onChangeSigners={{@onChangeSigners}}
  />
{{else}}
  <Signatures::CreateSignFlow::Piece
    @decisionActivities={{@decisionActivities}}
    @onChangeSigners={{@onChangeSigners}}
    @onChangeApprovers={{@onChangeApprovers}}
    @onChangeNotificationAddresses={{@onChangeNotificationAddresses}}
  />
{{/if}}
