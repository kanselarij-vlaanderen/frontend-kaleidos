<div class="vlc-toolbar vlc-agenda-items-section-header">
  <div class="vlc-toolbar__left">
    <div class="vlc-toolbar__item">
      <h3 class="vl-title--h3 vlc-agenda-items-section-header__title">
        {{t "agendaitems-subtitle"}}
      </h3>
    </div>
  </div>

  <div class="vlc-toolbar__right">
    <div class="vlc-toolbar__item">
      <a class="vlc-agenda-items-section-header__link" {{action "toggleChangesOnly"}}>
        {{#if (not isShowingChanges)}}
          {{t "show-changes"}}
        {{else}}
          {{t "show-all"}}
        {{/if}}
      </a>
    </div>
    <div class="vlc-toolbar__item">
      {{#if (and isEditor (await currentAgenda.isDesignAgenda))}}
        <div class="vl-u-spacer-extended-left-s">
          <a class="vlc-agenda-items-section-header__link" {{action "toggleIsEditingOverview"}}>
            {{t "edit"}}
          </a>
        </div>
      {{/if}}
    </div>
  </div>
</div>
{{#if (is-empty agendaitems)}}
  <div class="vl-u-spacer-extended-top-s">
    {{web-components/vl-alert message=(t "no-agendaitems-yet")}}
  </div>
{{/if}}
<div class="{{spacerClass}}">
  {{#if isEditor}}
    {{#sortable-group
      tagName="div"
      onChange=(action "reorderItems") as |sortableGroup|
    }}
      <ol>
        {{#each agendaitems as |agendaitem|}}
          {{#if agendaitem.groupName}}
            <div class="vlc-list-section-header">
              {{{agendaitem.groupName}}}
            </div>
          {{/if}}
          {{#sortable-item
            tagName="div"
            model=agendaitem
            group=sortableGroup
            distance=30
            handle=dragHandleClass
          }}
            <li class="vlc-agenda-items__sub-item">
              {{agenda/agenda-list/list-item
                agendaitem=agendaitem
                isEditingOverview=isEditingOverview
                isShowingChanges=isShowingChanges
                selectAgendaItem=(action "selectAgendaItem")
              }}
            </li>
          {{/sortable-item}}
        {{/each}}
      </ol>
    {{/sortable-group}}
  {{else}}
  <ol>
    {{#each agendaitems as |agendaitem|}}
      {{#if agendaitem.groupName}}
        <div class="vlc-list-section-header">
          {{{agendaitem.groupName}}}
        </div>
      {{/if}}
      <li class="vlc-agenda-items__sub-item">
        {{agenda/agenda-list/list-item
          agendaitem=agendaitem
          isEditingOverview=isEditingOverview
          isShowingChanges=isShowingChanges
          selectAgendaItem=(action "selectAgendaItem")
        }}
      </li>
    {{/each}}
  </ol>
  {{/if}}
</div>
{{#if (not selectedAgendaItem)}}
  <div class="vlc-agenda-items-section-header">
    <h3 class="vl-title--h3 vlc-agenda-items-section-header__title">
      {{t "announcements-subtitle"}}
    </h3>
  </div>
{{else}}
  <div class="vlc-agenda-items-section-header">
    <h3 class="vl-title--h3 vlc-agenda-items-section-header__title">
      {{t "announcements-subtitle"}}
    </h3>
  </div>
{{/if}}
<div class="vl-u-spacer">
  {{#if (gt (await announcements.length) 0)}}
    {{#if isEditor}}
      {{#sortable-group
        tagName="div"
        onChange=(action "reorderAnnouncements") as |sortableAnnouncements|
      }}
        {{#each (await announcements) as |announcement index|}}
          {{#sortable-item
            tagName="div"
            model=announcement
            group=sortableAnnouncements
            distance=30
            handle=dragHandleClass
          }}
            <div class="vlc-agenda-items__sub-item">
              {{agenda/agenda-list/list-item
                agendaitem=announcement
                isEditingOverview=isEditingOverview
                selectAgendaItem=(action "selectAgendaItem")
              }}
            </div>
          {{/sortable-item}}
        {{/each}}
      {{/sortable-group}}
    {{else}}
      {{#each (await announcements) as |announcement index|}}
        <div class="vlc-agenda-items__sub-item">
          {{agenda/agenda-list/list-item
            agendaitem=announcement
            isEditingOverview=isEditingOverview
            selectAgendaItem=(action "selectAgendaItem")
          }}
        </div>
      {{/each}}
    {{/if}}
  {{else}}
    {{web-components/vl-alert message=(t "no-announcements-yet")}}
  {{/if}}
</div>