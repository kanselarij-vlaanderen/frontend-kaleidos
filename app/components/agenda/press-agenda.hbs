<div class="auk-container auk-container--center">
  <Utils::LogoHeaderLegacy />
  <div class="auk-u-mb-8">
    <h1 class="auk-h1">
      {{await this.title}}
      <br />
      <span class="auk-u-mt-2 auk-u-text-muted">
        {{t "agenda"}}
      </span>
    </h1>
  </div>
  <div class="auk-u-mb-8">
    <div class="auk-hr">
      <hr />
    </div>
  </div>
  <div class="auk-u-mb-4">
    {{#each (await this.agendaitemGroups) as |agendaitemGroup|}}
      {{#if agendaitemGroup.agendaitems.length}}
        <div class="auk-u-mb-4">
          {{#each (await agendaitemGroup.mandatees) as |mandatee|}}
            <h2 class="auk-h3">
              {{mandatee.title}}
            </h2>
          {{/each}}
        </div>
        <div class="auk-u-mb-8">
          {{#each agendaitemGroup.agendaitems as |agendaitem|}}
            {{#if (not agendaitem.isEditing)}}
              <div class="auk-u-mb-2">
                <div class="auk-o-flex auk-o-flex--justify-between">
                  <h3 class="auk-h4">
                    {{agendaitem.number}}
                    .
                    {{agendaitem.titlePress}}
                  </h3>
                  {{#if (eq this.definite "false")}}
                    {{#if (user-may "manage-agendaitems")}}
                      <div class="auk-u-ml-2">
                        <AuButton
                          @skin="link"
                          @icon="pencil"
                          {{action "toggleIsEditing" agendaitem}}
                        >
                          {{t "edit"}}
                        </AuButton>
                      </div>
                    {{/if}}
                  {{/if}}
                </div>
              </div>
              <div class="auk-content">
                <ul>
                  <li>
                    {{agendaitem.textPress}}
                  </li>
                </ul>
                <p></p>
              </div>
            {{else}}
              <div class="auk-u-mb-4">
                <AgendaitemPressEdit
                  @agendaitem={{agendaitem}}
                  @isEditing={{agendaitem.isEditing}}
                />
              </div>
            {{/if}}
          {{/each}}
          <div class="auk-u-mb-8">
            <div class="auk-hr">
              <hr />
            </div>
          </div>
        </div>
      {{/if}}
    {{/each}}
  </div>
</div>