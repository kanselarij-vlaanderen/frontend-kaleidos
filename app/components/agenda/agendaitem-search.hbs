<Auk::Navbar @skin="gray-100" class="vlc-hide-on-print">
  <Auk::Toolbar>
    <Auk::Toolbar::Group @position="left">
      <Auk::Toolbar::Item class="auk-u-maximize-width">
        <div class="auk-form-group">
          {{!-- template-lint-disable no-redundant-fn --}}
          {{!-- TODO: Using plain decorated action for Input's @enter doesn't work for some reason --}}
          <Auk::Input
            @icon="search"
            @block={{true}}
            data-test-agendaitem-search-input
            placeholder={{t "search-placeholder"}}
            value={{this.searchText}}
            @enter={{fn this.search}}
            {{on "input" this.debouncedSearch}}
          />
          {{!-- template-lint-enable no-redundant-fn --}}
        </div>
      </Auk::Toolbar::Item>
      {{#if this.debouncedSearchTask.isRunning}}
        <div class="auk-loader" role="alert" aria-busy="true"></div>
      {{/if}}
    </Auk::Toolbar::Group>
  </Auk::Toolbar>
</Auk::Navbar>