<div data-test-publication-pills-container>
  {{#unless this.loadInitialData.isRunning}}
    {{#if (user-may "manage-decision-publications")}}
      {{#if this.internalDecisionPublicationActivity.startDate}}
        <AuPill @skin="success" @icon="check" class="auk-u-mr-2 auk-u-mt-2">
          {{t
            "decisions-were-released-at"
            date=(date this.internalDecisionPublicationActivity.startDate)
            time=(time this.internalDecisionPublicationActivity.startDate)
          }}
        </AuPill>
      {{/if}}
    {{/if}}
    {{#if (user-may "manage-document-publications")}}
      {{#if this.internalDocumentPublicationActivity.startDate}}
        <AuPill @skin="success" @icon="check" class="auk-u-mr-2 auk-u-mt-2">
          {{t
            "documents-were-released-at"
            date=(date this.internalDocumentPublicationActivity.plannedDate)
            time=(time this.internalDocumentPublicationActivity.plannedDate)
          }}
        </AuPill>
      {{else}}
        {{#if this.isConfirmedDocumentPublicationPlanning}}
          <AuPill @skin="default" @icon="clock" class="auk-u-mr-2 auk-u-mt-2">
            {{t
              "documents-are-planned-to-release-at"
               date=(date this.internalDocumentPublicationActivity.plannedDate)
               time=(time this.internalDocumentPublicationActivity.plannedDate)
            }}
          </AuPill>
        {{/if}}
      {{/if}}
    {{/if}}
    {{#if (user-may "manage-themis-publications")}}
      {{#if (and this.isReleasedThemisPublicationActivity this.themisPublicationIncludesDocuments)}}
        <AuPill @skin="success" @icon="check" class="auk-u-mr-2 auk-u-mt-2">
          {{t
            "documents-were-published-at"
            date=(date this.latestThemisPublicationActivity.plannedDate)
            time=(time this.latestThemisPublicationActivity.plannedDate)
          }}
        </AuPill>
      {{else if this.isConfirmedThemisPublicationActivity}}
        <AuPill @skin="default" @icon="clock" class="auk-u-mr-2 auk-u-mt-2">
          {{t
            "documents-are-planned-to-publish-at"
            date=(date this.latestThemisPublicationActivity.plannedDate)
            time=(time this.latestThemisPublicationActivity.plannedDate)
          }}
        </AuPill>
      {{/if}}
    {{/if}}
  {{/unless}}
</div>