<Auk::Tabs data-test-agenda-nav-tabs @reversed={{true}}>
  <Auk::Tab @isHierarchicalBack={{true}} />
  <Auk::Tab
    @route="agenda.agendaitems.index"
    @query={{if
      this.currentAgendaItemId
      (hash anchor=this.currentAgendaItemId)
    }}
  >
    {{t "overview"}}
  </Auk::Tab>
  {{#if this.firstAgendaitem}}
    <Auk::Tab
      @route="agenda.agendaitems.agendaitem"
      @models={{this.modelsForDetailRoute}}
    >
      {{t "detail"}}
    </Auk::Tab>
  {{/if}}
  <Auk::Tab @route="agenda.documents">
    {{t "documents"}}
  </Auk::Tab>
  <Auk::Tab @route="agenda.minutes">
    {{t "minutes"}}
  </Auk::Tab>
</Auk::Tabs>