<Auk::Tabs data-test-agenda-nav-tabs @reversed={{true}}>
  <Auk::Tab @isHierarchicalBack={{true}} />
  <Auk::Tab
    @route="agenda.agendaitems.index"
    @current-when="agenda.agendaitems.index" {{!-- NOTE: without explicitly defining `@current-when` the active state seems to be missing in some cases --}}
    @query={{if
      this.currentAgendaItemId
      (hash anchor=this.currentAgendaItemId)
    }}
  >
    {{t "overview"}}
  </Auk::Tab>
  {{#if this.firstAgendaitem}}
    <Auk::Tab
      @route="agenda.agendaitems.agendaitem"
      @current-when="agenda.agendaitems.agendaitem"
      @models={{this.modelsForDetailRoute}}
    >
      {{t "detail"}}
    </Auk::Tab>
  {{/if}}
  <Auk::Tab @route="agenda.documents">
    {{t "documents"}}
  </Auk::Tab>
  {{#if this.enableDigitalMinutes}}
    {{#if (user-may "manage-minutes")}}
      <Auk::Tab @route="agenda.minutes">
        {{t "minutes"}}
      </Auk::Tab>
    {{/if}}
  {{/if}}
</Auk::Tabs>