<div
  class="auk-o-flex auk-o-flex--vertical-center"
  ...attributes
>
  {{#if this.onChange.isRunning}}
    <div class="auk-u-text-muted">
      {{t "please-be-patient"}}
      <Auk::Loader />
    </div>
  {{/if}}
  <Agenda::Agendaitem::FormallyOkPowerselect 
    @selectedFormallyOkOption={{this.selectedFormallyOkOption}}
    @onChange={{this.onUpdateSelectedOption}}
    @onSave={{this.onSave}}
    @disabled={{this.onSave.isRunning}}
  />
  <AuButton
    @skin="naked"
    @icon="check"
    @hideText={{true}}
    @loading={{this.onSave.isRunning}}
    {{on "click" (perform this.onSave)}}
    class="auk-u-ml"
  >
    {{t "save"}}
  </AuButton>
  <AuButton
    @skin="naked"
    @icon="x"
    @hideText={{true}}
    @loading={{this.onSave.isRunning}}
    {{on "click" @cancelEdit}}
  >
    {{t "cancel"}}
  </AuButton>
</div>