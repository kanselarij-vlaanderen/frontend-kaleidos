{{#if (not isAgendaItem)}}
  <div class="vl-u-spacer">
    <div class="vlc-input-field-block">
      {{web-components/vl-form-label value=(t "confidential")}}
      {{web-components/vl-toggle value=confidential}}
    </div>
  </div>
  <div class="vl-u-spacer-extended-bottom-s">
    {{web-components/vl-form-label value=(t "publicity")}}
    {{utils/model-selector
      modelName="access-level"
      allowClear=true
      searchField="label"
      propertyToShow="label"
      readOnly=confidential
      sortField="label"
      selectedItems=(await accessLevel)
      selectModel=(action "setAccessLevel")
    }}
  </div>
{{/if}}
<div class="vl-u-spacer">
  <div class="vlc-input-field-block">
    {{web-components/vl-form-label value=(t "name-subcase")}}
    {{textarea
      data-test-subcase-titles-edit-shorttitle
      rows="2"
      class="vl-textarea vl-textarea--block"
      value=shortTitle
    }}
  </div>
</div>
<div class="vl-u-spacer">
  <div class="vlc-input-field-block" data-test-vl-subcase-titles-edit-title-subcase>
    {{web-components/vl-form-label value=(t "title-subcase")}}
    {{textarea
      data-test-subcase-titles-edit-title-subcase
      rows="4"
      class="vl-textarea vl-textarea--block"
      value=title
    }}
  </div>
</div>
{{#if isAgendaItem}}
  <div class="vl-u-spacer">
    <div class="vlc-input-field-block" data-test-vl-subcase-titles-edit-explanation>
      {{web-components/vl-form-label value=(t "remark-title")}}
      {{textarea
        rows="2"
        class="vl-textarea vl-textarea--block"
        value=item.explanation
      }}
    </div>
  </div>
{{/if}}
{{#if isRemark}}
  {{#if (not-eq null (await item.showInNewsletter))}}
    <div class="vl-u-spacer">
      <div class="vlc-input-field-block" data-test-vl-subcase-titles-edit-show-in-newsletter>
        {{web-components/vl-form-label value=(t "show-in-newsletter")}}
        {{web-components/vl-toggle 
          value=(await item.showInNewsletter) 
          valueChanged=(action "toggleShowInNewsletter" (await item))
        }}
      </div>
    </div>
  {{/if}}
{{/if}}
<div class="vl-action-group vl-action-group--align-right">
  <a href="" class="vl-button vl-button--tertiary"
    {{action "cancelEditing"}}
  >
    {{t "cancel"}}
  </a>
  {{web-components/vl-save-button
    data-test-subcase-titles-edit-save
    text=(t "save")
    isLoading=isLoading
    saveAction=(action "saveChanges")
  }}
</div>