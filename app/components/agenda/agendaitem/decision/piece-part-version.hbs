{{#if this.previousVersions.value.length}}
  <AuDropdown
    @title={{this.labelForVersion this.selectedVersion}}
    @alignment="left"
    @skin="naked"
    @icon="chevron-down"
    @iconAlignment="right"
  >
    <AuButton
      @skin="link-secondary"
      role="menuitem"
      {{on "click" (fn this.onVersionClicked @piecePart)}}
    >
      {{t "current-version"}}
    </AuButton>
    {{#each this.previousVersions.value as |previousVersion|}}
      <AuButton
        @skin="link-secondary"
        role="menuitem"
        {{on "click" (fn this.onVersionClicked previousVersion)}}
      >
        {{t
          "version-of-date-at-time"
          date=(date previousVersion.created)
          time=(time previousVersion.created)
        }}
      </AuButton>
    {{/each}}
  </AuDropdown>
{{/if}}