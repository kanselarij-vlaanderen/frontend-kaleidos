<AuToolbar class="au-u-margin-bottom" as |Group|>
  <Group>
    <AuHeading @level="3" @skin="4">
      {{t "preparation-text"}}
    </AuHeading>
  </Group>
  <Group>
    {{#unless this.isEditing}}
      {{#if this.currentSession.isEditor}}
        <AuButton
          @skin="secondary"
          @icon="pencil"
          @iconAlignment="left"
          {{on "click" this.toggleIsEditing}}>
          {{t "edit"}}
        </AuButton>
      {{/if}}
    {{/unless}}
  </Group>
</AuToolbar>
{{#if this.isEditing}}
  <AgendaitemPressEdit
    @agendaitem={{@agendaitem}}
    @isEditing={{this.isEditing}}
  />
  {{else}}
  <Auk::Panel>
    <Auk::Panel::Header>
      <Auk::Toolbar>
        <Auk::Toolbar::Group @position="left">
          <Auk::Toolbar::Item>
            <h4 class="auk-h4 auk-u-my-2">{{@agendaitem.titlePress}}</h4>
          </Auk::Toolbar::Item>
        </Auk::Toolbar::Group>
        <Auk::Toolbar::Group @position="right">
          <Auk::Toolbar::Item>
            {{#if @agendaitem.forPress}}
              <AuPill @skin="success" @icon="users">
                {{t "for-press"}}
              </AuPill>
            {{else}}
              <AuPill @skin="warning" @icon="users">
                {{t "not-public-press"}}
              </AuPill>
            {{/if}}
          </Auk::Toolbar::Item>
        </Auk::Toolbar::Group>
      </Auk::Toolbar>
    </Auk::Panel::Header>
    <Auk::Panel::Body>
      <div class="auk-content">
        {{@agendaitem.textPress}}
      </div>
    </Auk::Panel::Body>
  </Auk::Panel>
{{/if}}
