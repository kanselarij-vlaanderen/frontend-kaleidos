{{#if (not isAddingCase)}}
  <div class="vlc-toolbar vlc-toolbar--auto">
    <div class="vlc-toolbar__left">
      <div class="vlc-toolbar__item">
        <h1 class="vlc-page-header__title vlc-u-padding-bottom-5" data-test-cases-header-title>
          {{t "cases"}}
        </h1>
      </div>
    </div>
    <div class="vlc-toolbar__right">
      <div class="vlc-toolbar__item">
        <div class="vl-action-group">
          {{#if currentSession.isEditor}}
            <button type="button"
                    data-test-cases-header-add-case
                    class="vl-button vl-button--narrow vl-button--icon-before"
              {{action "toggleAddingCase"}}
            >
              <i class="vl-button__icon vl-button__icon--before vl-vi vl-vi-add"
                 aria-hidden="true"
              ></i>
              {{t "add-case"}}
            </button>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
{{else}}
  <WebComponents::VlModal
    @isOverlay={{true}}
    @closeModal={{action "toggleAddingCase"}}
    @title={{t "new-case"}} >
    <Cases::NewCase @close={{action "closeAction"}} />
  </WebComponents::VlModal>
{{/if}}
