<Auk::Panel data-test-subcase-description-panel>
  <Auk::Panel::Header>
    <Auk::Toolbar>
      <Auk::Toolbar::Group @position="left">
        <Auk::Toolbar::Item>
          <div class="au-u-flex au-u-flex--spaced-small">
            <h4 class="auk-panel__title">
              {{t "newest-documents"}}
            </h4>
          </div>
        </Auk::Toolbar::Item>
      </Auk::Toolbar::Group>
    </Auk::Toolbar>
  </Auk::Panel::Header>
  {{#if this.loadData.isIdle}}
    <Auk::Panel::Body
      @noPadding={{is-empty (keys this.piecesBySubcase)}}
      class="c-document-panel"
    >
      {{#each-in this.piecesBySubcase as |subcaseName submittedPieces|}}
        <AuHeading @level="4" @skin="6">{{capitalize subcaseName}}</AuHeading>
        <ul>
          {{#each submittedPieces as |submittedPiece|}}
            <li class="vlc-document-list__item">
              <div
                class="auk-o-flex auk-o-flex--spaced auk-o-flex--vertical-center"
              >
                <AuLink
                @route="document"
                @model={{submittedPiece.piece.id}}
                @skin="secondary">
                  <div class="auk-icon auk-icon--default">
                    <i class="ki ki-document"></i>
                  </div>
                  <span>
                    {{submittedPiece.name}}
                    {{this.submittedPieceList submittedPiece}}
                  </span>
                </AuLink>
              </div>
            </li>
          {{/each}}
        </ul>
      {{else}}
        <div>
          <AuAlert
            @skin="info"
            @icon="info-circle"
            class="au-u-margin-bottom-none"
          >
            {{t "no-documents-submitted-to-vp-yet"}}
          </AuAlert>
        </div>
      {{/each-in}}
    </Auk::Panel::Body>
  {{else}}
    <Auk::Panel::Body>
      <AuLoader />
    </Auk::Panel::Body>
  {{/if}}
</Auk::Panel>
