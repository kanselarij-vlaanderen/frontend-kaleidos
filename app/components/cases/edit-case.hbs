{{#if @caseToEdit}}
  <Auk::Modal::Body>
    <div class="auk-u-mb-4"
      {{did-insert this.onChange}}
    >
      <div class="auk-form-group">
        <Auk::Label>{{t "name-subcase"}}</Auk::Label>
        <Auk::Textarea 
          @value={{this.shortTitle}}
        />
      </div>
    </div>
  </Auk::Modal::Body>
  <Auk::Modal::Footer @onCancel={{@onClose}}>
    <Auk::Toolbar>
      <Auk::Toolbar::Group @position="right">
        <Auk::Toolbar::Item>
          <Auk::Button 
            @skin="primary"
            @loading={{this.editCaseTask.isRunning}}
            {{on "click" (perform this.editCaseTask)}}
          >
            {{t "save"}}
          </Auk::Button>
        </Auk::Toolbar::Item>
      </Auk::Toolbar::Group>
    </Auk::Toolbar>
  </Auk::Modal::Footer>
{{/if}}