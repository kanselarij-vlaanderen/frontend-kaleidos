<form onsubmit={{action "createCase"}}>
  <div class="vl-modal-dialog__content">
    <div class="vl-u-spacer">
      <div class="vlc-input-field-block">
        {{web-components/vl-form-label value=(t "confidential")}}
        {{web-components/vl-toggle value=confidential}}
      </div>
    </div>
    {{cases/forms/metadata-form
      submitter=submitter
      meeting=meeting
      shortTitle=shortTitle
      selectedPolicyLevel=selectedPolicyLevel
      selectedMeetingChanged=(action "selectedMeetingChanged")
      submitterChanged=(action "submitterChanged")
    }}
  </div>
  <div class="vlc-navbar vlc-navbar--bordered-top">
    <div class="vlc-toolbar">
      <div class="vlc-toolbar__left">
        <div class="vlc-toolbar__item">
          <button
            type="button" data-test-vl-modal-footer-cancel
            class="vl-button vl-button--link vl-button--narrow"
            {{action "close"}}
          >
            {{t "cancel"}}
          </button>
        </div>
      </div>
      <div class="vlc-toolbar__right">
        <div class="vlc-toolbar__item">
          {{web-components/vl-save-button
            text=(t "create-case")
            type="submit"
            isLoading=isLoading
            disabled=isLoading
          }}
        </div>
      </div>
    </div>
  </div>
</form>
