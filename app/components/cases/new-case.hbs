{{! template-lint-disable no-action }}
<form onsubmit={{action "createCaseAction"}}>
  <Auk::Modal::Body>
    {{#if this.hasError}}
      <Auk::Alert
        data-test-new-case-shorttitle-error
        @skin="error"
        @icon="alert-triangle"
        @title={{t "modal-error-alert-title"}}
        @message={{t "modal-error-alert-message"}}
      />
    {{/if}}

    <div
      class="auk-form-group {{this.getClassForShortTitle}}"
      data-test-new-case-shorttitle
    >
      <Auk::Label id="case-short-title">{{t "short-title-case"}}</Auk::Label>
      <Textarea
        class="auk-textarea"
        rows="2"
        aria-labelledby="case-short-title"
        @value={{this.shortTitle}}
      />
    </div>
  </Auk::Modal::Body>
  <Auk::Modal::Footer @custom={{true}}>
    <Auk::Toolbar @size="large">
      <Auk::Toolbar::Group @position="left">
        <Auk::Toolbar::Item>
          <Auk::ButtonLink {{action "closeAction"}} data-test-new-case-cancel>
            {{t "cancel"}}
          </Auk::ButtonLink>
        </Auk::Toolbar::Item>
      </Auk::Toolbar::Group>
      <Auk::Toolbar::Group @position="right">
        <Auk::Toolbar::Item>
          <WebComponents::VlSaveButton
            data-test-new-case-save={{true}}
            @text={{t "create-case"}}
            @type="submit"
            @isLoading={{this.isLoading}}
          />
        </Auk::Toolbar::Item>
      </Auk::Toolbar::Group>
    </Auk::Toolbar>
  </Auk::Modal::Footer>
</form>