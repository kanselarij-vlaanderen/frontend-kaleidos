<ConfirmationModal
  @modalOpen={{true}}
  @title={{t "new-case"}}
  @onConfirm={{perform this.createCase}}
  @onCancel={{@onCancel}}
  @confirmMessage={{t "create-case"}}
  @disabled={{this.isCreateDisabled}}
  @loading={{this.createCase.isRunning}}
>
  <:body>
    <div class="au-c-form">
      <AuFormRow data-test-new-case-shorttitle>
        <AuLabel for="case-short-title">{{t "short-title-case"}}</AuLabel>
        <AuTextarea
          id="case-short-title"
          value={{this.shortTitle}}
          @width="block"
          {{on "input" (pick "target.value" (set this "shortTitle"))}}
        />
      </AuFormRow>
    </div>
  </:body>
</ConfirmationModal>
