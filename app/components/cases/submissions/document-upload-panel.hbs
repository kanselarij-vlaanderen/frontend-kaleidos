<Auk::Panel class="auk-u-mb-2" data-test-submission-document-upload-panel>
  <Auk::Panel::Header class="au-u-background-gray-100">
    <h4 class="auk-panel__title">{{t "documents"}}</h4>
  </Auk::Panel::Header>
  <Auk::Panel::Body>
    <Auk::FileUploader
      @isSubmission={{true}}
      @multiple={{true}}
      @reusable={{true}}
      @onUpload={{this.uploadPiece}}
      @onQueueUpdate={{@onFileQueueUpdate}}
    />
    <div class="upload-container">
      {{#each @pieces as |piece|}}
        <Documents::UploadedDocument
          @piece={{piece}}
          @allowDocumentContainerEdit={{true}}
          @allowEditPieceAccessLevel={{true}}
          @simplifiedOptions={{true}}
          @onDelete={{perform this.deletePiece piece}}
          @onAccessLevelChanged={{@onAccessLevelChanged}}
        />
      {{/each}}
    </div>
  </Auk::Panel::Body>
</Auk::Panel>
