<Auk::Modal::Body>
  <div class="auk-form-group">
    <Auk::Label>{{t "add-people"}}</Auk::Label>
    {{utils/create-person-selector
      selectedItems=selectedPerson
      selectModel=(action "personSelected")
    }}
  </div>
  <div class="auk-form-group">
    <Auk::Label>{{t "name"}}</Auk::Label>
    <Auk::Input
      @block={{true}}
      @value={{name}}
    />
  </div>
  <div class="auk-form-group">
    <Auk::Label>{{t "signature-function"}}</Auk::Label>
    <Auk::Input
      @block={{true}}
      @value={{function}}
    />
  </div>
  <div class="auk-form-group">
    <Auk::Label>{{t "signature-file"}}</Auk::Label>
    {{#if (not uploadedFile)}}
      {{file-uploader
        multipleFiles=false
        uploadedFileAction=(action "getUploadedFile")
      }}
    {{else}}
      <div class="auk-o-flex auk-o-flex--center auk-preview-container">
        <img src="{{downloadUrl}}" alt="{{t "no-signature-yet"}}"/>
        <a href="" {{action "removeFile" uploadedFile}}>
          {{fa-icon "remove"}}
        </a>
      </div>
    {{/if}}
  </div>
</Auk::Modal::Body>
{{web-components/vl-modal-footer
  isLoading=isLoading
  cancelButtonText=(t "cancel")
  saveButtonText=(t "signature-add")
  cancelAction=(action "closeModal")
  saveAction=(action "createSignature")
}}
