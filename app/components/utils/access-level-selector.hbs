{{#if @simplifiedOptions}}
  <AuToggleSwitch
    @checked={{eq @selected.uri this.confidentialUri}}
    @onChange={{this.toggleConfidential}}
    ...attributes
  />
{{else}}
  <Utils::ModelSelector
    @modelName="concept"
    @selected={{@selected}}
    @disabled={{@disabled}}
    @allowClear={{@allowClear}}
    @searchField={{@searchField}}
    @placeholder={{@placeholder}}
    @onChange={{@onChange}}
    @displayField={{@displayField}}
    @sortField={{@sortField}}
    @includeField={{@includeField}}
    @multiple={{@multiple}}
    @filterOptions={{@filterOptions}}
    @filter={{this.filter}}
    ...attributes
  />
{{/if}}