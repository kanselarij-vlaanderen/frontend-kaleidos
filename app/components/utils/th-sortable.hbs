<th class="auk-u-text-nowrap" aria-sort="none" ...attributes >
  <button class="auk-table-sorter" type="button" onclick={{this.changeSort}}>
    <div class="auk-table-sorter__label {{if this.isSorted "auk-u-text-bold"}}">{{@label}}</div>
    {{#if this.isDescendingOrder}}
      <AuIcon @icon="caret-down" class="au-u-muted" />
    {{else if this.isAscendingOrder}}
      <AuIcon @icon="caret-up" class="au-u-muted" />
    {{else}}
      <AuIcon @icon="caret-up-down" class="au-u-muted" />
    {{/if}}
  </button>
</th>