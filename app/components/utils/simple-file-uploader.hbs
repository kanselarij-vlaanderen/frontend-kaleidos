<FileUpload
  @name="files"
  @accept=".csv"
  @onfileadd={{action "uploadFile"}} as |queue|>

  {{!-- refactored the structure below a bit to remove redundant nesting (vl-refactor), but is still unintuitive --}}
  {{#if queue.files.length}}
    <Auk::Button
      @skin="secondary"
      @icon="import"
      @disabled={{true}}
    >
      {{t "import-users-text"}}
    </Auk::Button>
  {{else}}
    <span class="auk-button auk-button--secondary auk-u-block" data-test-simple-file-uploader>
      <span class="auk-button__content">
        <span class="auk-icon auk-icon--default">
          <i class="ki ki-import"></i>
        </span>
        <span class="auk-button__label">
          {{t "import-users"}}
        </span>
      </span>
    </span>
  {{/if}}

</FileUpload>
