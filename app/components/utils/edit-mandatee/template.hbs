<div class="vl-modal-dialog__content">
  <div class="vlc-input-field-block">
    {{web-components/vl-form-label value=(t "title")}}
    {{web-components/vl-form-input width="4" value=title}}
  </div>
  <div class="vlc-input-field-block">
    {{web-components/vl-form-label value=(t "nick-name")}}
    {{web-components/vl-form-input width="4" value=nickName}}
  </div>
  <div class="vlc-input-field-block">
    {{web-components/vl-form-label value=(t "add-people")}}
    {{utils/create-person-selector
      selectedItems=mandateeToEdit.person
      selectModel=(action "personSelected")
    }}
  </div>
  <div class="vlc-input-field-block">
    {{web-components/vl-form-label value=(t "start-date")}}
    {{web-components/vl-datepicker
      selectedDate=startDate
      dateChanged=(action "selectStartDate")
    }}
  </div>
  <div class="vlc-input-field-block">
    {{web-components/vl-form-label value=(t "end-date")}}
    {{web-components/vl-datepicker
      selectedDate=endDate
      dateChanged=(action "selectEndDate")
    }}
  </div>
  <div class="vlc-input-field-block">
    {{web-components/vl-form-label value=(t "ise-code")}}
    {{utils/model-selector
      modelName="ise-code"
      searchField="name"
      propertyToShow="nameToShow"
      sortField="name"
      multiSelect=true
      selectedItems=iseCodes
      selectModel=(action "chooseIseCodes")
    }}
  </div>
</div>
<div class="vlc-navbar vlc-navbar--no-padding vlc-navbar--bordered-top">
  <div class="vlc-toolbar">
    <div class="vlc-toolbar__left">
      <div class="vlc-toolbar__item">
        <button
          class="vl-button vl-button--link vl-button--narrow"
          {{action "closeModal"}}
        >
          {{t "cancel"}}
        </button>
      </div>
    </div>
    <div class="vlc-toolbar__right">
      <div class="vlc-toolbar__item">
        {{web-components/vl-save-button
          text=(t "save")
          isLoading=isLoading
          saveAction=(action "saveChanges" mandateeToEdit)
        }}
      </div>
    </div>
  </div>
</div>
