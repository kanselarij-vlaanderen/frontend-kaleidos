{{#if @multiple}}
  <PowerSelectMultiple
    @options={{this.items}}
    @selected={{@selected}}
    @disabled={{@disabled}}
    @searchField={{@searchField}}
    @placeholder={{@placeholder}}
    @loadingMessage={{t "please-be-patient"}}
    @noMatchesMessage={{t "no-results-found"}}
    @searchEnabled={{this.searchEnabled}}
    @searchMessage={{null}}
    @closeOnSelect={{false}}
    @search={{perform this.searchTask}}
    @onChange={{@onChange}}
    @renderInPlace={{@renderInPlace}}
    ...attributes
  as |model|>
    {{#if (has-block)}}
      {{yield model}}
    {{else}}
      {{get model @displayField}}
    {{/if}}
  </PowerSelectMultiple>
{{else}}
  <PowerSelect
    @options={{this.items}}
    @selected={{@selected}}
    @disabled={{@disabled}}
    @allowClear={{@allowClear}}
    @searchField={{@searchField}}
    @placeholder={{@placeholder}}
    @loadingMessage={{t "please-be-patient"}}
    @noMatchesMessage={{t "no-results-found"}}
    @searchEnabled={{this.searchEnabled}}
    @searchMessage={{null}}
    @search={{perform this.searchTask}}
    @onChange={{@onChange}}
    @renderInPlace={{@renderInPlace}}
    ...attributes
  as |model|>
    {{#if (has-block)}}
      {{yield model}}
    {{else}}
      {{get model @displayField}}
    {{/if}}
  </PowerSelect>
{{/if}}