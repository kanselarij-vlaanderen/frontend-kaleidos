<div class="auk-u-mb-4">
  <WebComponents::VlModal
    @title={{t "document-add"}}
    @closeModal={{this.cancel}}
    @isOverlay={{true}}
    @large={{true}}
  >
    <Auk::Modal::Body>
      {{#if this.pieceInCreation}}
        <div class="upload-container">
          <EmberKaleidosWebuniversum::VlUploadedDocument
            @name={{this.pieceInCreation.file.filename}}
            @extension={{this.pieceInCreation.file.extension}}
            @size={{this.pieceInCreation.file.size}}
            @downloadName={{this.pieceInCreation.file.filename}}
            @downloadLink={{this.pieceInCreation.file.namedDownloadLink}}
            @delete={{fn this.deletePieceInCreation}}
          />
        </div>
      {{else}}
        <FileUploader
          @multipleFiles={{false}}
          @uploadedFileAction={{this.createNewPiece}}
        />
      {{/if}}
    </Auk::Modal::Body>
    <WebComponents::VlModalFooter
      @isLoading={{this.save.isRunning}}
      @cancelButtonText={{t "cancel"}}
      @saveButtonText={{t "document-add"}}
      @cancelAction={{this.cancel}}
      @saveAction={{perform this.save}}
      @disableSave={{not this.pieceInCreation}}
    />
  </WebComponents::VlModal>
</div>