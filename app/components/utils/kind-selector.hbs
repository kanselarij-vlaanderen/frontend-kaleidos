{{#if this.isLoading}}
  <div class="auk-u-text-muted">
    {{t "please-be-patient"}}
    <Auk::Loader />
  </div>
{{else}}
  <AuFormRow data-test-utils-kind-selector>
    <Auk::Label>{{t "kind"}}</Auk::Label>
    <PowerSelect
      @options={{this.options}}
      @selected={{@selectedKind}}
      @onChange={{@onChange}}
      as |option|
    >
      {{option.label}}
    </PowerSelect>
  </AuFormRow>
{{/if}}