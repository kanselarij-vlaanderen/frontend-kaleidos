<div class="vl-modal-dialog__content">
  <div class="vlc-input-field-block">
    {{web-components/vl-form-label value=(t "add-people")}}
    {{utils/create-person-selector
      selectedItems=selectedPerson
      selectModel=(action "personSelected")
    }}
  </div>
  <div class="vlc-input-field-block">
    {{web-components/vl-form-label value=(t "name")}}
    {{web-components/vl-form-input width="4" value=name}}
  </div>
  <div class="vlc-input-field-block">
    {{web-components/vl-form-label value=(t "signature-function")}}
    {{web-components/vl-form-input width="4" value=function}}
  </div>
  <div class="vlc-input-field-block">
    {{web-components/vl-form-label value=(t "signature-file")}}
    {{#if (not uploadedFile)}}
      {{file-uploader
        multipleFiles=false
        uploadedFile=(action "getUploadedFile")
      }}
    {{else}}
      <div class="vlc-preview-container">
        <img src="{{downloadUrl}}" alt="{{t "no-signature-yet"}}" />
        <a {{action "removeFile" uploadedFile}}>
          {{fa-icon "remove"}}
        </a>
      </div>
    {{/if}}
  </div>
</div>
{{web-components/vl-modal-footer
  isLoading=isLoading
  cancelButtonText=(t "cancel")
  saveButtonText=(t "signature-add")
  cancelAction=(action "closeModal")
  saveAction=(action "createSignature")
}}
