{{#let (load @parliamentFlow.status) as |statusPromise|}}
  {{#if statusPromise.isResolved}}
    {{#if statusPromise.value}}
      <AuPill
        @size="small"
        @skin={{if (or @parliamentFlow.isComplete @parliamentFlow.isBeingHandledByFP) "success" "warning"}}
      >
        {{#if @useAltLabel}}
          {{@parliamentFlow.status.altLabel}}
        {{else}}
          {{@parliamentFlow.status.label}}
        {{/if}}
      </AuPill>
    {{else}}
      <AuPill @size="small" @skin="warning">
        {{t "no-status"}}
      </AuPill>
    {{/if}}
  {{else}}
    <AuPill @size="small" @skin="default">
      {{t "loading"}}
    </AuPill>
  {{/if}}
{{/let}}
