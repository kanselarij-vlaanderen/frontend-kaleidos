<tr data-test-table-row-newsletter-row class="lt-row">
  <td
    data-test-table-row-newsletter-row-agendaitem-number
    class="lt-cell align-left"
  >
    {{@agendaitem.number}}
  </td>
  <td
    data-test-table-row-newsletter-row-title
    class="lt-cell align-left auk-table__col--7"
  >
    {{#if this.hasNewsletterInfo}}
      <div class="auk-u-mb-2">
        <p class="auk-u-text-bold">
          {{this.newsletterInfo.title}}
        </p>
      </div>
      <div class="auk-u-mb-2">
        <SanitizeHtml @raw={{true}} @value={{this.newsletterInfo.richtext}} />
      </div>
      {{#if this.newsletterInfo.remark}}
        <p class="auk-u-text-muted auk-u-text-capitalize auk-u-text-size--small">
          {{this.newsletterInfo.remark}}
        </p>
      {{/if}}
    {{else}}
      <p class="auk-u-text-muted auk-u-italic">
        {{t "no-newsletter-info"}}
      </p>
    {{/if}}
  </td>
  <td class="lt-cell align-left">
    {{#each (await @agendaitem.mandatees) as |mandatee|}}
      {{await mandatee.person.nameToDisplay}}<br />
    {{else}}
      <p class="auk-u-text-muted auk-u-italic">
        {{t "no-ministers"}}
      </p>
    {{/each}}
  </td>
  <td class="lt-cell align-left">
    <Auk::Checkbox
      @checked={{this.newsletterInfo.inNewsletter}}
      @disabled={{or
        (not this.hasNewsletterInfo)
        this.saveNewsletterInfoTask.isRunning
      }}
      data-test-table-row-newsletter-row-checkbox-in-newsletter={{true}}
      {{on "input" this.setInNewsletter}}
    />
  </td>
  <td class="lt-cell align-left">
    {{#if this.hasNewsletterInfo}}
      {{moment-format this.newsletterInfo.modified "DD-MM-YYYY - HH:mm"}}
    {{else}}
      -
    {{/if}}
  </td>
  <td class="lt-cell align-left">
    <NewsletterTable::ButtonToolbar
      @agendaitem={{@agendaitem}}
      @onEdit={{this.startEditing}}
    />
  </td>
</tr>
{{#if this.isEditing}}
  <tr class="lt-row lt-expanded-row">
    <td colspan="5">
      <div class="auk-container auk-container--center">
        <Agenda::Agendaitem::AgendaitemNewsItemEdit
          @newsletterInfo={{this.newsletterInfo}}
          @agendaitem={{@agendaitem}}
          @onCancel={{this.stopEditing}}
          @onSave={{this.stopEditing}}
        />
      </div>
    </td>
  </tr>
{{/if}}