<Documents::DocumentList class="auk-document-card-list" @pieces={{@pieces}} as |documents|>
  {{#each documents as |doc|}}
    <div class="auk-u-mb-2">
      <Documents::DocumentCard
        @piece={{doc}}
        @agendaContext={{@agendaContext}}
        @isHighlighted={{includes doc @highlightedPieces}}
        @isEditable={{@isEditable}}
        @hideNewerVersions={{false}}
        @didDeleteContainer={{@didDeleteContainer}}
        @onOpenUploadModal={{@onOpenUploadModal}}
        @onAddPiece={{@onAddPiece}}
        @decisionActivity={{@decisionActivity}}
        @submission={{@submission}}
        @newDocuments={{@newDocuments}}
      />
    </div>
  {{else}}
    <div class="auk-u-mt-2">
      <AuAlert
        @skin="info"
        @icon="info-circle"
      >
        {{t "no-documents-yet"}}
      </AuAlert>
    </div>
  {{/each}}
</Documents::DocumentList>
