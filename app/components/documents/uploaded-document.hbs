<EmberKaleidosWebuniversum::VlUploadedDocument
  @name={{@piece.file.filename}}
  @extension={{@piece.file.extension}}
  @size={{@piece.file.size}}
  @downloadName={{@piece.file.filename}}
  @downloadLink={{@piece.file.namedDownloadLink}}
  @onDelete={{@onDelete}}
  ...attributes
>
  {{#if @allowDocumentContainerEdit}}
    <div data-test-uploaded-document-container class="metadata-container">
      <div class="auk-form-group">
        <Auk::Label>{{t "name-document"}}</Auk::Label>
        <AuInput
          data-test-uploaded-document-name-input={{true}}
          @width="block"
          @value={{mut @piece.name}}
        />
      </div>
      {{#unless this.loadData.isRunning}}
        <div class="auk-form-group" data-test-uploaded-document-types>
          <Auk::Label>{{t "document-type"}}</Auk::Label>
          <Utils::DocumentTypeSelector
            data-test-batch-editing-row-type
            @selectedDocumentType={{this.documentType}}
            @onChange={{this.selectDocumentType}}
          />
        </div>
      {{/unless}}
      {{#if @kabinet}}
        <div class="auk-form-group">
          <AuCheckbox
            @name="vertrouwelijk"
            @checked={{false}}
          >
            Vertrouwelijk
          </AuCheckbox>
        </div>
      {{/if}}
    </div>
  {{/if}}
</EmberKaleidosWebuniversum::VlUploadedDocument>