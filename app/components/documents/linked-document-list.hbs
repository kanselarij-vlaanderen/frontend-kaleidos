<div {{did-update (perform this.loadData) @linkedPieces}}>
  {{#if this.loadData.isRunning}}
    <Auk::Loader @message={{t "documents-loading-text"}} />
  {{else}}
    {{#each this.sortedDocumentHistories as |history|}}
      <Documents::LinkedDocumentLink
        @documentContainer={{history.documentContainer}}
        @lastPiece={{history.lastPiece}}
        @onUnlinkDocumentContainer={{@onUnlinkDocumentContainer}}
        class="auk-u-mb-2"
      />
    {{else}}
      <div class="auk-u-mt-2">
        <AuAlert
          @skin="info"
          @icon="info-circle"
        >
          {{t "no-documents-yet"}}
        </AuAlert>
      </div>
    {{/each}}
  {{/if}}
</div>