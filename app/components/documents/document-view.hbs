{{#if @file}}
  {{#if this.isPdfDocument}}
    <object
      type="application/pdf"
      data={{@file.inlineViewLink}}
      class="pdf-view"
    >
    </object>
  {{else if this.showWarning}}
    <div class="auk-u-p-4">
      <Auk::Alert
        @skin="warning"
        @title={{t "file-type-unsupported"}}
        @message={{t
                     "file-viewer-type-unsupported"
                     fileType=@file.extension
                 }}
      />
    </div>
  {{/if}}
{{else}}
  <div class="auk-u-p-4">
    <Auk::Alert
      @skin="warning"
      @title={{t "document-unauthorized"}}
      @message={{t "document-unauthorized-message"}}
    />
  </div>
{{/if}}