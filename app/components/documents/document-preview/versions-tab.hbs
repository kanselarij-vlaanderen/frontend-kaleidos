<Utils::LoadableContent @isLoading={{this.loadVersionsData.isRunning}}>
  <ul class="auk-document-cards">
    {{#each this.sortedVersions as |version|}}
      <Documents::DocumentPreview::VersionCard
        @piece={{version}}
        @documentContainer={{@documentContainer}}
        @isHighlighted={{eq @currentVersion version}}
        @onSelectVersion={{@onSelectVersion}}
        {{on "click" (fn @onSelectVersion version)}}
      />
    {{/each}}
  </ul>
</Utils::LoadableContent>