<Auk::Modal @size="full-screen">
  <Auk::Modal::Header
    @title={{@piece.name}}
    @onClose={{@onClose}}
  />
  <Auk::Modal::Body @noPadding={{true}}>
    <div class="auk-panel-layout">
      <div class="auk-panel-layout__main-content">
        {{#if @piece.file.canPreview}}
          <PdfView @filePath={{@piece.file.downloadLink}}/>
        {{else}}
          <div class="auk-u-p-4">
            <Auk::Alert
              @skin="warning"
              @title={{t "file-type-unsupported"}}
              @message={{t "file-viewer-type-unsupported" fileType=@piece.file.extension}}
            />
          </div>
        {{/if}}
      </div>
      <div class="auk-panel-layout__sidebar">
        <Documents::DocumentPreviewSidebar @piece={{@piece}}/>
      </div>
    </div>
  </Auk::Modal::Body>
</Auk::Modal>