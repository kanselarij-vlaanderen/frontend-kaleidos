<div class="auk-modal-backdrop auk-modal-backdrop--visible" data-test-vl-modal-container>
  <ClickOutside
    @onClickOutside={{action "clickOutside"}}
    @exceptSelector=".flatpickr-calendar"
  >
    <div class="auk-modal {{this.sizeClass}}" role="dialog" data-test-vl-modal-dialogwindow>
      <div class="auk-modal__push"></div>
      <div class="auk-modal__content">
        <div class="auk-modal__header auk-modal__header--bordered">
          <Auk::Toolbar @size="large">
            <Auk::Toolbar::Group @position="left">
              <Auk::Toolbar::Item>
                <h2 class="auk-toolbar__title">{{this.title}}</h2>
              </Auk::Toolbar::Item>
            </Auk::Toolbar::Group>
            <Auk::Toolbar::Group @position="right">
              <Auk::Toolbar::Item>
                {{#if this.showCloseButton}}
                  <AuButton
                    data-test-vl-modal-close
                    @skin="naked"
                    @icon="x"
                    @hideText={{true}}
                    {{action "close"}}
                  >
                    {{t "close"}}
                  </AuButton>
                {{/if}}
              </Auk::Toolbar::Item>
            </Auk::Toolbar::Group>
          </Auk::Toolbar>
        </div>
        {{yield}}
      </div>
      <div class="auk-modal__push"></div>
    </div>
  </ClickOutside>
</div>