<div class="auk-o-flex--justify-between">
  <Auk::Button
    @skin="borderless"
    @layout="icon-only"
    @icon="pencil"
  />
  {{#if (not (is-pending (await this.row.nota)))}}
    <Auk::Button
      @skin="borderless"
      @layout="icon-only"
      @icon="document"
      @disabled={{not (await this.row.nota)}}
      {{! TODO: octane-refactor }}
      {{on "click" (fn "openDocument" this.row bubbles=false)}}
    >
      <:floater>
        <EmberTooltip @side="bottom" @tooltipClass="auk-tooltip">
          {{#if (not (await this.row.nota))}}
            {{t "no-nota"}}
          {{else}}
            {{t "open-note"}}
          {{/if}}
        </EmberTooltip>
      </:floater>
    </Auk::Button>
  {{else}}
    <div class="auk-loader" role="alert" aria-busy="true">
      <EmberTooltip @side="bottom" @tooltipClass="auk-tooltip">
        {{t "nota-loading-text"}}
      </EmberTooltip>
    </div>
  {{/if}}
  <Auk::Button
    @skin="borderless"
    @layout="icon-only"
    @icon="chevron-right"
    @route="agenda.agendaitems.agendaitem"
    @models={{array
      (await this.latestMeetingId)
      (await this.latestAgendaId)
      (await this.latestAgendaitemId)
    }}
    @bubbles={{false}}
    target="_blank"
  />
</div>