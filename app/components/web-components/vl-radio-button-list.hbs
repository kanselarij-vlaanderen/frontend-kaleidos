<fieldset>
  <legend class="auk-label">{{title}}</legend>
  <Auk::RadioList @layout="inline" as |RadioList|>
    {{#each optionList as |option index|}}
      <RadioList.Radio
        @label={{option.label}}
        @checked={{if
          selectedModel
          (eq option.id selectedModel.id)
          (eq index 0)
        }}
        onchange={{fn (action "modelChanged") option.id}}
      />
    {{/each}}
  </Auk::RadioList>
</fieldset>