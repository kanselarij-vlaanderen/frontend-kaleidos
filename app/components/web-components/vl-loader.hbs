<div data-test-vl-loader class="vl-region">
  <div class="auk-u-text-align--center">
    <div class="vl-loader" role="alert" aria-busy="true"></div>
    {{#if (not text)}}
      <p>
        {{t "loading-text"}}
      </p>
    {{else}}
      <p>
        {{text}}
      </p>
    {{/if}}
  </div>
</div>