<Auk::Toolbar @size="large">
  <Auk::Toolbar::Group @position="left">
    <Auk::Toolbar::Item>
      <Auk::ButtonLink
        {{action "cancelAction"}}
        data-test-vl-modal-footer-cancel
      >
        {{this.cancelButtonText}}
      </Auk::ButtonLink>
    </Auk::Toolbar::Item>
  </Auk::Toolbar::Group>
  <Auk::Toolbar::Group @position="right">
    <Auk::Toolbar::Item>
      <Auk::Button
        @skin="primary"
        {{!-- also disable button when 'isLoading', since no loading state on button is available.
          Disabling the button while in loading state is important in order to avoid multiple
          action calls when clicking multiple times on the same confirm-button --}}
        disabled={{or this.disableSave this.isLoading}}
        {{!-- loadingText=(t "please-be-patient") isLoading=isLoading --}}
        data-test-vl-modal-footer-save={{true}}
        {{action "saveAction"}}
      >
        {{this.saveButtonText}}
      </Auk::Button>
    </Auk::Toolbar::Item>
  </Auk::Toolbar::Group>
</Auk::Toolbar>