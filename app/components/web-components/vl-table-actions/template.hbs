<div class="vlc-u-flex-space-between">
  <button type="button" class="vl-button vl-button--link vl-button--icon">
    <i class="vl-button__icon vl-vi vl-vi-pencil"></i>
  </button>
  {{#if (not (is-pending (await row.nota)))}}
    {{#if (not (await row.nota))}}
      <button type="button" class="vl-button vl-button--link vl-button--icon"
              style="opacity:0.3;"
        {{action "openDocument" row bubbles=false}}
      >
        <i class="vl-button__icon vl-vi vl-vi-document"></i>
        {{#attach-tooltip
          arrow="true"
          animation="shift"
          placement="bottom"
          class="ember-attacher-tooltip"
        }}
          {{t "no-nota"}}
        {{/attach-tooltip}}
      </button>
    {{else}}
      <button type="button" class="vl-button vl-button--link vl-button--icon"
        {{action "openDocument" row bubbles=false}}
      >
        <i class="vl-button__icon vl-vi vl-vi-document"></i>
        {{#attach-tooltip
          arrow="true"
          animation="shift"
          placement="bottom"
          class="ember-attacher-tooltip"
        }}
          {{t "open-note"}}
        {{/attach-tooltip}}
      </button>
    {{/if}}
  {{else}}
    <div class="vl-loader" role="alert" aria-busy="true">
      {{#attach-tooltip
        arrow="true"
        animation="shift"
        placement="bottom"
        class="ember-attacher-tooltip"
      }}
        {{t "nota-loading-text"}}
      {{/attach-tooltip}}
    </div>
  {{/if}}
  {{#link-to
    data-test-link-to-subcase-overview
    "cases.case.subcases.subcase.overview"
    (await row.subcase.case.id)
    (await row.subcase.id)
    target="_blank"
    bubbles=false
    class="vl-button vl-button--link vl-button--icon"
  }}
    <i class="vl-button__icon vl-vi vl-vi-nav-right"></i>
  {{/link-to}}
</div>
