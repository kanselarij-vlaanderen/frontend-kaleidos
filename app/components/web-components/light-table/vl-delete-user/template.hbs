<button
        class="vl-button vl-button--link vl-button--icon"
  {{action "toggleIsVerifying" bubbles=false}}
>
    <i class="vl-vi vl-vi-trash" aria-hidden="true"></i>
    <span class="vl-u-visually-hidden">
      {{t "delete"}}
    </span>
</button>
{{#if isVerifying}}
  {{web-components/vl-modal-verify
          title=(t "delete-account")
          message=(t "delete-account-message")
          cancel=(action "toggleIsVerifying")
          verify=(action "deleteAccount")
  }}
{{/if}}