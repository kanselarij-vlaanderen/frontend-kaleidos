<button type="button" data-test-delete-user class="auk-button auk-button--borderless auk-button--icon vlc-link-pointer" {{action "toggleIsVerifying" bubbles=false}}>
  <div class="auk-icon auk-icon--default">
    <i class="ki ki-delete"></i>
  </div>
  <div class="auk-u-sr-only">
    {{t "delete"}}
  </div>
</button>
{{#if isVerifying}}
  {{web-components/vl-modal-verify
    title=(t "delete-account")
    message=(t "delete-account-message")
    cancel=(action "toggleIsVerifying")
    verify=(action "deleteAccount")
  }}
{{/if}}
