<li class="{{this.class}}">
  {{#if @href}}
    <a class="auk-menu__item active {{this.skin}}" href={{@href}} ...attributes>
      {{yield}}
    </a>
  {{else if @textOnly}}
    <div class="auk-menu__item--text-only" ...attributes>
      {{yield}}
    </div>
  {{else if @onClickAction}}
    <div {{on "click" @onClickAction}} class="auk-menu__item active {{this.skin}}"  ...attributes>
      {{yield}}
    </div>
  {{else}}
    <LinkTo class="auk-menu__item active {{this.skin}}" @route={{@route}} ...attributes>
      {{yield}}
    </LinkTo>
  {{/if}}
</li>
