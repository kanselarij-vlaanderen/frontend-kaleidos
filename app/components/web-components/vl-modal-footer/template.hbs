<div class="vlc-toolbar vlc-toolbar--spaced vlc-toolbar--bordered-top">
  <div class="vlc-toolbar__left">
    <div class="vlc-toolbar__item">
      <button type="button" data-test-vl-modal-footer-cancel
              class="vl-button vl-button--link"
        {{action "cancelAction"}}
      >
        {{cancelButtonText}}
      </button>
    </div>
  </div>
  <div class="vlc-toolbar__right">
    <div class="vlc-toolbar__item">
      {{web-components/vl-save-button
        text=saveButtonText
        loadingText=(t "please-be-patient")
        isLoading=isLoading
        data-test-vl-save=true
        disabled=disableSave
        saveAction=(action "saveAction")
      }}
    </div>
  </div>
</div>
