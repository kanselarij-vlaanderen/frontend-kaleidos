{{#if @isHierarchicalBack}}
  <li class="auk-tabs__tab auk-tabs__hierarchical-back" ...attributes>
    <LinkTo @route={{this.route}}>
      <span class="auk-tabs__tab-inner">
        <WebComponents::AuTab::Innerlayout @layout={{this.layout}} @icon="hierarchical-back" @counter={{this.counter}}>
          {{yield}}
        </WebComponents::AuTab::Innerlayout>
      </span>
    </LinkTo>
  </li>
{{else}}
  <li class="auk-tabs__tab" ...attributes>
    <LinkTo @route={{this.route}} @current-when={{@currentWhen}}>
      <span class="auk-tabs__tab-inner">
        <WebComponents::AuTab::Innerlayout @layout={{this.layout}} @icon={{this.icon}} @counter={{this.counter}}>
          {{yield}}
        </WebComponents::AuTab::Innerlayout>
      </span>
    </LinkTo>
  </li>
{{/if}}