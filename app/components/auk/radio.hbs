<label class="auk-radio">
  <input class="auk-radio__toggle" type="radio" checked={{@checked}} name={{this.name}} ...attributes>
  <span>{{@label}}</span>
  {{#if @sublabel}}
    <br/>
    <span class="auk-u-text-muted auk-u-text-size--small">{{@sublabel}}</span>
  {{/if}}
  <span class="auk-radio__box"></span>
</label>