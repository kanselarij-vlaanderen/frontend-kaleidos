{{#if @route}}
  <LinkTo
    type="button"
    class="auk-button-link {{this.skin}} {{this.block}} {{this.padded}}"
    @route={{@route}}
    @models={{this.models}}
    @disabled={{@disabled}}
    @activeClass={{@activeClass}}
    @current-when={{@current-when}}
    @preventDefault={{@preventDefault}}
    @tagName={{@tagName}}
    @query={{@query}}
    {{!-- TODO: should @tagName be specified to "button"? --}}
    ...attributes
  >
    <span class="auk-button__content">
      <Auk::Button::InnerLayout @layout={{@layout}} @icon={{@icon}} @size={{@size}}>{{yield}}</Auk::Button::InnerLayout>
    </span>
  </LinkTo>
{{else if @href}}
  <a
    href={{@href}}
    class="auk-button-link {{this.skin}} {{this.block}} {{this.padded}}"
    ...attributes
  >
    <span class="auk-button__content">
      <Auk::Button::InnerLayout @layout={{@layout}} @icon={{@icon}} @size={{@size}}>{{yield}}</Auk::Button::InnerLayout>
    </span>
  </a>
{{else}}
  {{!-- When using a button-link as an {{on click}} action, you typically dont pass href or route and need to fallback on a normal button (f.e. inside dropdown)--}}
  <button
    type="button"
    class="auk-button-link {{this.skin}} {{this.block}} {{this.padded}}"
    ...attributes
  >
    <span class="auk-button__content">
      <Auk::Button::InnerLayout @layout={{@layout}} @icon={{@icon}}>{{yield}}</Auk::Button::InnerLayout>
    </span>
  </button>
{{/if}}