{{#if (not @isActionable)}}
  <span class="auk-status-pill {{this.statusClass}} {{this.sizeClass}}" ...attributes>
    <span class="auk-status-pill__content">
      <AuIcon @icon={{this.iconName}} />
      {{#if (has-block)}}
        <span class="auk-status-pill__label">{{yield}}</span>
      {{/if}}
    </span>
  </span>
{{else}}
  <button
    data-test-status-pill-change-status
    class="auk-status-pill auk-status-pill--actionable {{this.statusClass}} {{this.sizeClass}}"
    type="button"
    ...attributes
  >
    <span class="auk-status-pill__content">
      <AuIcon @icon={{this.iconName}} />
      {{#if (has-block)}}
        <span
          data-test-status-pill-content-label
          class="auk-status-pill__label"
        >{{yield}}</span>
      {{/if}}
    </span>
    <span class="auk-status-pill__action" aria-hidden="true">
      <AuIcon @icon={{this.actionIconName}} @size="small" />
      {{#if @actionLabel}}
        <span class="auk-status-pill__label">{{@actionLabel}}</span>
      {{/if}}
    </span>
  </button>
{{/if}}
