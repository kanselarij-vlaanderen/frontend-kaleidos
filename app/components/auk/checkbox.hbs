<label class="auk-checkbox">
  <input
    class="auk-checkbox__toggle"
    ...attributes
    type="checkbox"
    checked={{@checked}}
    disabled={{@disabled}}
  />
  <span>
    {{#if (has-block)}}
      {{yield}}
    {{else}}
      {{@label}}
    {{/if}}
  </span>
  <span class="auk-checkbox__box"></span>
</label>