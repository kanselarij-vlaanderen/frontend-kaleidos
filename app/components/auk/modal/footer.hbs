<div class="auk-modal__footer auk-modal__footer--bordered">
  {{#if @custom}}
    {{yield}}
  {{else}}
    <Auk::Toolbar @size="large">
      <Auk::Toolbar::Group @position="left">
        <Auk::Toolbar::Item>
          <Auk::ButtonLink
            data-test-au-modal-footer-cancel
            {{on "click" @onCancel}}
          >
            {{t "cancel"}}
          </Auk::ButtonLink>
        </Auk::Toolbar::Item>
      </Auk::Toolbar::Group>
      <Auk::Toolbar::Group @position="right">
        <Auk::Toolbar::Item>
          {{yield}}
        </Auk::Toolbar::Item>
      </Auk::Toolbar::Group>
    </Auk::Toolbar>
  {{/if}}
</div>