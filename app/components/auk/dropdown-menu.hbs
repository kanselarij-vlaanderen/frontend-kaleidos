<this.initiator
  @skin={{@skin}}
  @disabled={{@disabled}}
  @layout={{this.layout}}
  @icon={{this.icon}}
  @size={{@size}}
  @padded={{@padded}}
  @block={{this.block}}
  ...attributes
  {{on "click" this.toggleDropdown}}
>
  <:default>
    {{@label}}
  </:default>
  <:floater>
    <Auk::DropdownMenu::Floater @isOpen={{this.isOpen}} @onChange={{this.setDropdownStatus}} @placement={{this.placement}} as |Floater|>
      {{yield Floater}}
    </Auk::DropdownMenu::Floater>
  </:floater>
</this.initiator>