<div class="auk-accordion__item {{if (not this.isActive) "auk-accordion__item--closed"}}" ...attributes>
  <div class="auk-accordion__header auk-accordion__header--{{this.layout}}">
    <button
      type="button"
      class="auk-accordion__button"
      disabled={{@disabled}}
      aria-expanded={{if this.isActive "true" "false"}}
      aria-controls={{this.accordionId}}
      {{on "click" this.toggleAccordion}}
    >
      <Auk::Toolbar>
        {{#if (eq this.layout "controls-right")}}
          <Auk::Toolbar::Group @position="left">
            <Auk::Toolbar::Item>
              <span class="auk-accordion__title">{{@title}}</span>
            </Auk::Toolbar::Item>
          </Auk::Toolbar::Group>
          <Auk::Toolbar::Group @position="right">
            <Auk::Toolbar::Item>
              <AuIcon @icon="chevron-right" class="auk-accordion__toggle-icon" />
            </Auk::Toolbar::Item>
          </Auk::Toolbar::Group>
        {{else}}
          <Auk::Toolbar::Group @position="left">
            <Auk::Toolbar::Item>
              <AuIcon @icon="chevron-right" class="auk-accordion__toggle-icon" />
              <span class="auk-accordion__title">{{@title}}</span>
            </Auk::Toolbar::Item>
          </Auk::Toolbar::Group>
        {{/if}}
      </Auk::Toolbar>
    </button>
  </div>
  <div
    class="auk-accordion__content"
    id={{this.accordionId}}
    aria-hidden="{{not this.isActive}}"
  >
    {{#if this.isActive}}
      {{yield}}
    {{/if}}
  </div>
</div>
