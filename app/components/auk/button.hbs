{{#if @loading}}
  <button
    class="auk-button-loading"
    type="button"
    disabled
    ...attributes
  >
    <Auk::Loader />
  </button>
{{else if @route}}
  <LinkTo
    type="button"
    class="auk-button {{this.skin}} {{this.size}} {{this.layoutClass}} {{this.disabled}} {{this.block}}"
    disabled={{@disabled}}
    @route={{@route}}
    @models={{this.models}}
    ...attributes
  >
    <Auk::Button::InnerLayout @layout={{@layout}} @icon={{@icon}}>
      {{yield}}
    </Auk::Button::InnerLayout>
  </LinkTo>
{{else if @href}}
  {{!-- TODO: document in writing what the difference is between a "Auk::Button" with @href and a "Auk::ButtonLink" with @href --}}
  <a
    type="button"
    class="auk-button {{this.skin}} {{this.size}} {{this.layoutClass}} {{this.disabled}} {{this.block}}"
    href={{@href}}
    disabled={{@disabled}}
    ...attributes
  >
    <Auk::Button::InnerLayout @layout={{@layout}} @icon={{@icon}}>
      {{yield}}
    </Auk::Button::InnerLayout>
  </a>
{{else}}
  <button
    class="auk-button {{this.skin}} {{this.size}} {{this.layoutClass}} {{this.disabled}} {{this.block}}"
    type="button"
    disabled={{@disabled}}
    ...attributes
  >
    <Auk::Button::InnerLayout @layout={{@layout}} @icon={{@icon}}>
      {{yield}}
    </Auk::Button::InnerLayout>
    {{#if (has-block "floater")}}
      {{yield to="floater"}}
    {{/if}}
  </button>
{{/if}}