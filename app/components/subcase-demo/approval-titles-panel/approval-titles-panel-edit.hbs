<Auk::Panel class="auk-panel--editing auk-u-mb-8">
  <Auk::Panel::Header>
    <Auk::Toolbar>
      <Auk::Toolbar::Group @position="left">
        <Auk::Toolbar::Item>
          <div class="au-u-flex au-u-flex--spaced-small">
            <h4 class="auk-panel__title">
              Overzicht
            </h4>
          </div>
        </Auk::Toolbar::Item>
      </Auk::Toolbar::Group>
    </Auk::Toolbar>
  </Auk::Panel::Header>
  <Auk::Panel::Body>
    {{#if (eq @submission true)}}
    <div class="auk-u-mb-4">
      <div class="auk-form-group">
        <Auk::Label>Dossier</Auk::Label>
        <select
          name="dossier"
          id="dossier"
          class="auk-select auk-select--block"
        >
          <option
            value="-"
            selected="selected"
          >
            Tegemoetkomingen mobiliteitshulpmiddelen
          </option>
          <option
            value="1"
          >
            Vlaamse advies- en beleidsparticipatieraad van personen met en handicap(NOOZO vzw): subsidie werkjaar 2023
          </option>
          <option
            value="2"
          >
            Luchtvervoersovereenkomst Nederlandse Antillen
          </option>
          <option
            value="3"
          >
             Implementatie BelRAI LTCF 
          </option>
        </select>
        <AuButton @skin="link" @icon="add" class="au-u-margin-top-small" {{on "click" this.toggleCaseModal}}>Nieuw dossier toevoegen</AuButton>
      </div>
    </div>
    {{/if}}
    <div class="auk-u-mb-4">
      <div class="auk-form-group">
        <Auk::Label id="name-subcase">{{t "name-subcase"}}</Auk::Label>
        <Textarea
          data-test-subcase-titles-edit-shorttitle={{true}}
          aria-labelledby="name-subcase"
          rows="2"
          class="auk-textarea"
          @value={{@subcase.shortTitle}}
        />
      </div>
    </div>
    <div class="auk-u-mb-4">
      <div class="auk-form-group">
        <Auk::Label id="title-subcase">{{t "title-subcase"}}</Auk::Label>
        <Textarea
          data-test-subcase-titles-edit-title={{true}}
          aria-labelledby="name-subcase"
          rows="4"
          class="auk-textarea"
          @value={{@subcase.title}}
        />
      </div>
    </div>
    {{!-- <div class="auk-form-group">
      <AuFieldset as |Fieldset|>
        <Fieldset.legend>{{t "subcase-type"}}</Fieldset.legend>
        <Fieldset.content>
          <AuRadioGroup
            data-test-subcase-description-edit-type
            @alignment="inline"
            @selected={{this.agendaItemType}}
            @onChange={{this.onChangeAgendaItemType}}
            as |Group|
          >
            {{#each this.agendaItemTypes as |type|}}
              <Group.Radio
                @value={{type}}
              >
                {{type.label}}
              </Group.Radio>
            {{/each}}
          </AuRadioGroup>
        </Fieldset.content>
      </AuFieldset>
    </div> --}}
    <div class="auk-form-group">
      <Auk::Label>Procedurestap type</Auk::Label>
      <AuRadioGroup
        data-test-new-subcase-type
        @alignment="inline"
        @selected={{this.agendaItemType}}
        @onChange={{this.onChangeAgendaItemType}}
        as |Group|
      >
        {{#each this.agendaItemTypes as |type|}}
          <Group.Radio
            @value={{type}}
          >
            {{type.label}}
          </Group.Radio>
        {{/each}}
      </AuRadioGroup>
    </div>
    <div class="auk-form-group">
      <Auk::Label>{{t "subcase-type-dropdown"}}</Auk::Label>
      <Utils::ModelSelector
        @modelName="subcase-type"
        @searchField="label"
        @sortField="label"
        @displayField="label"
        @selected={{this.subcaseType}}
        @onChange={{this.selectSubcaseType}}
      />
    </div>
    {{#if (eq @kabinet true)}}
    <div class="auk-form-group">
      <Auk::Label for="longTitle">Notificeer</Auk::Label>
      <Auk::Textarea
        data-test-new-subcase-longtitle
        @rows="4"
        @value=""
        id="notifications"
      />
      <AuHelpText @skin="secondary">In dit veld kun je meerdere e-mailadressen invoeren, gescheiden door een komma (,). Bijvoorbeeld: jan@example.com, marie@example.com, peter@example.com</AuHelpText>
    </div>
    {{else}}
    <div class="auk-form-group">
      <Auk::Label>{{t "subcase-name"}}</Auk::Label>
      <AuInput
        @width="block"
        @value={{mut this.subcaseName}}
      />
    </div>
    {{/if}}
    <div class="auk-form-group">
      <Auk::Label for="subcase-confidential">{{t "limited-access"}}</Auk::Label>
      <AuToggleSwitch
        data-test-subcase-titles-edit-confidential={{true}}
        @checked={{@subcase.confidential}}
        id="subcase-confidential"
        @onChange={{set this "confidentialChanged" true}}
      />
    </div>
    {{#if (eq @submission true)}}
    <div class="auk-form-group">
      <Auk::Label>Status</Auk::Label>
      <select
        name="status"
        id="status"
        class="auk-select auk-select--block"
      >
        <option
          value="ingediend"
          selected="selected"
        >
          Ingediend
        </option>
        <option
          value="verwerken"
        >
          Aan het verwerken
        </option>
        <option
          value="wacht"
        >
          Wacht op het kabinet
        </option>
      </select>
    </div>
    {{/if}}
  </Auk::Panel::Body>
  <Auk::Panel::Footer>
    <Auk::Toolbar>
      <Auk::Toolbar::Group @position="left">
        <Auk::Toolbar::Item>
          <AuButton
            @skin="naked"
            {{on "click" this.cancelEditing}}
          >
            {{t "cancel"}}
          </AuButton>
        </Auk::Toolbar::Item>
      </Auk::Toolbar::Group>
      <Auk::Toolbar::Group @position="right">
        <Auk::Toolbar::Item>
          <AuButton
            data-test-subcase-titles-edit-save={{true}}
            @skin="primary"
            @loading={{this.isSaving}}
            {{on "click" (perform this.saveChanges)}}
          >
            {{t "save"}}
          </AuButton>
        </Auk::Toolbar::Item>
      </Auk::Toolbar::Group>
    </Auk::Toolbar>
  </Auk::Panel::Footer>
</Auk::Panel>

{{#if this.caseModal}}
<Auk::Modal>
  <Auk::Modal::Header @title="Nieuw dossier toevoegen" @onClose={{this.toggleCaseModal}} />
  <Auk::Modal::Body>
    <div>
      <Auk::Label>Dossier naam</Auk::Label>
      <AuInput @width="block" @value="" />
    </div>
  </Auk::Modal::Body>
  <Auk::Modal::Footer
    @onCancel={{this.toggleCaseModal}}
  >
    <AuButton
      @skin="primary"
      {{on "click" this.toggleCaseModal}}
    >
      Dossier toevoegen
    </AuButton>
  </Auk::Modal::Footer>
</Auk::Modal>
{{/if}}