<div class="vlc-navbar vlc-navbar--bordered-bottom vlc-navbar--no-padding vlc-navbar--bg-alt vlc-navbar--auto"
     id="c-main-nav">
  <div class="vlc-toolbar vlc-toolbar--auto vlc-toolbar--slide-in">
    <div class="vlc-toolbar__left">
      <div class="vlc-toolbar__item">
        <ul class="vl-tabs vl-u-reset-margin">
          <li class="vl-tab" data-test-m-header-agendas>
            {{#link-to
              "agendas.overview"
              class="vl-tab__link"
              current-when="agendas agenda print-overviews.decisions print-overviews.notes print-overviews.press-agenda"
            }}
              {{t "agenda"}}
            {{/link-to}}
          </li>
          <li class="vl-tab" data-test-m-header-cases>
            {{#link-to "cases" class="vl-tab__link"}}
              {{t "cases"}}
            {{/link-to}}
          </li>
          <li class="vl-tab">
            {{#link-to "agendaitems" class="vl-tab__link"}}
              {{t "agendaitems"}}
            {{/link-to}}
          </li>
          <li class="vl-tab" data-test-m-header-newsletters>
            {{#link-to
              "newsletters"
              class="vl-tab__link"
              current-when="newsletters print-overviews.newsletter print-overviews.newsletter.agendaitems print-overviews.newsletter.overview"
            }}
              {{t "newsletter"}}
            {{/link-to}}
          </li>
          {{#if currentSession.isEditor}}
            <li class="vl-tab" data-test-m-header-settings>
              {{#link-to "settings.overview" class="vl-tab__link"}}
                {{t "settings"}}
              {{/link-to}}
            </li>
          {{/if}}
        </ul>
      </div>
    </div>
    <div class="vlc-toolbar__right">
      <div class="vlc-toolbar__right">
        {{#if showEnvironmentName}}
          <div class="vlc-environment-pill {{environmentClass}}">
            {{environmentName}}
            {{capitalize (t "environment")}}
          </div>
        {{/if}}
      </div>
      <div class="vlc-toolbar__item">
        {{#if currentSession.userContent}}
          <div class="vlc-user">
            <div class="vlc-user__username">
              {{currentSession.userContent.firstName}}
              {{currentSession.userContent.lastName}}
              ({{currentSession.userRole}})
            </div>
            <a href="" class="vlc-user__action" {{action "logout"}}>
              {{t "sign-out"}}
            </a>
          </div>
        {{else}}
          <div class="vlc-user">
            <div class="vlc-user__username"></div>
            {{#link-to "login" class="vlc-user__action"}}
              {{t "login"}}
            {{/link-to}}
          </div>
        {{/if}}
      </div>
    </div>
  </div>
</div>
