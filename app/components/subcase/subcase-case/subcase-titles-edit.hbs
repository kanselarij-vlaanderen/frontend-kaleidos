<div class="auk-u-mb-4">
  <div class="auk-form-group">
    <Auk::Label>{{t "confidential"}}</Auk::Label>
    {{web-components/vl-toggle
      data-test-subcase-titles-edit-confidential=true
      value=subcase.confidential
    }}
  </div>
</div>
<div class="auk-u-mb-2">
  <Auk::Label>{{t "publicity"}}</Auk::Label>
  {{utils/model-selector
    data-test-subcase-titles-edit-access-level=true
    modelName="access-level"
    allowClear=true
    searchField="label"
    propertyToShow="label"
    readOnly=subcase.confidential
    sortField="label"
    selectedItems=(await subcase.accessLevel)
    selectModel=(action "setAccessLevel")
  }}
</div>

<div class="auk-u-mb-4">
  <div class="auk-form-group">
    <Auk::Label>{{t "name-subcase"}}</Auk::Label>
    {{textarea
      data-test-subcase-titles-edit-shorttitle=true
      rows="2"
      class="auk-textarea"
      value=subcase.shortTitle
    }}
  </div>
</div>
<div class="auk-u-mb-4">
  <div class="auk-form-group">
    <Auk::Label>{{t "title-subcase"}}</Auk::Label>
    {{textarea
      data-test-subcase-titles-edit-title=true
      rows="4"
      class="auk-textarea"
      value=subcase.title
    }}
  </div>
</div>

<Auk::Toolbar>
  <WebComponents::AuToolbar::Group @position="right">
    <WebComponents::AuToolbar::Item>
      <button type="button" class="auk-button auk-button--tertiary" data-test-subcase-titles-edit-cancel
        {{action "cancelEditing"}}
      >
        <span class="auk-button__content">
          {{t "cancel"}}
        </span>
      </button>
    </WebComponents::AuToolbar::Item>
    <WebComponents::AuToolbar::Item>
      {{web-components/vl-save-button
        data-test-subcase-titles-edit-save=true
        text=(t "save")
        isLoading=isLoading
        saveAction=(action "saveChanges")
      }}
    </WebComponents::AuToolbar::Item>
  </WebComponents::AuToolbar::Group>
</Auk::Toolbar>
