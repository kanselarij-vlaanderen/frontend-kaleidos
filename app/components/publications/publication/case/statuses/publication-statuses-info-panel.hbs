<div class="auk-u-mb-8">
  <Auk::Panel>
    <Auk::Panel::Header>
      <Auk::Toolbar>
        <Auk::Toolbar::Group @position="left">
          <Auk::Toolbar::Item>
            <h4 class="auk-panel__title">
              {{t "publication-statusses"}}
            </h4>
          </Auk::Toolbar::Item>
        </Auk::Toolbar::Group>
      </Auk::Toolbar>
    </Auk::Panel::Header>
    <Auk::Panel::Body class="auk-u-bg-alt">
      {{#if this.loadData.isRunning}}
        <Auk::Loader
          @message={{t "loading"}}
        />
      {{else}}
        <div class="auk-u-mb-2">
          <div class="au-u-flex au-u-flex--spaced-tiny">  
            <p class="au-u-medium">
              {{t "latest-modified-on"}} {{date @publicationFlow.modified}}
            </p>
          </div>
        </div>
        <ul class="vlc-status-timeline">
          {{#if this.publicationActivity}}
            {{#if this.publicationActivity.endDate}}
              <li
                class="vlc-status-timeline__item vlc-status-timeline__item--neutral"
              >
                <div class="vlc-status-timeline__dot"></div>
                <div class="vlc-status-timeline__text">
                  {{t "publications-publication-received-on"}} {{date this.publicationActivity.endDate}}
                </div>
              </li>
            {{/if}}
            {{#if this.publicationActivity.startDate}}
              <li
                class="vlc-status-timeline__item vlc-status-timeline__item--neutral"
              >
                <div class="vlc-status-timeline__dot"></div>
                <div class="vlc-status-timeline__text">
                  {{t "publications-publication-requested-on"}} {{date this.publicationActivity.startDate}}
                </div>
              </li>
            {{/if}}
          {{/if}}
          {{#if this.proofingActivity}}
            {{#if this.proofingActivity.endDate}}
              <li
                class="vlc-status-timeline__item vlc-status-timeline__item--neutral"
              >
                <div class="vlc-status-timeline__dot"></div>
                <div class="vlc-status-timeline__text">
                  {{t "publications-proof-received-on"}} {{date this.proofingActivity.endDate}}
                </div>
              </li>
            {{/if}}
            {{#if this.proofingActivity.startDate}}
              <li
                class="vlc-status-timeline__item vlc-status-timeline__item--neutral"
              >
                <div class="vlc-status-timeline__dot"></div>
                <div class="vlc-status-timeline__text">
                  {{t "publications-proof-requested-on"}} {{date this.proofingActivity.startDate}}
                </div>
              </li>          
            {{/if}}
          {{/if}}
          {{#if this.translationActivity}}
            {{#if this.translationActivity.endDate}}
              <li
                class="vlc-status-timeline__item vlc-status-timeline__item--neutral"
              >
                <div class="vlc-status-timeline__dot"></div>
                <div class="vlc-status-timeline__text">
                  {{t "publications-translation-received-on"}} {{date this.translationActivity.endDate}}
                </div>
              </li>
            {{/if}}
            {{#if this.translationActivity.startDate}}
              <li
                class="vlc-status-timeline__item vlc-status-timeline__item--neutral"
              >
                <div class="vlc-status-timeline__dot"></div>
                <div class="vlc-status-timeline__text">
                  {{t "publications-translation-requested-on"}} {{date this.translationActivity.startDate}}
                </div>
              </li>
            {{/if}}
          {{/if}}
        </ul>
      {{/if}}
    </Auk::Panel::Body>
  </Auk::Panel>
</div>