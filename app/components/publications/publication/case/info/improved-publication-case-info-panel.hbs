<div  id="case" class="auk-u-mb-4">
  <Auk::Panel data-test-subcase-description-panel>
    <Auk::Panel::Header>
      <Auk::Toolbar>
        <Auk::Toolbar::Group @position="left">
          <Auk::Toolbar::Item>
            <div class="au-u-flex au-u-flex--spaced-small">
              <h4 class="auk-panel__title">
                {{t "publication-case-info-panel-title"}}
              </h4>
            </div>
          </Auk::Toolbar::Item>
        </Auk::Toolbar::Group>
        <Auk::Toolbar::Group @position="right">
          <Auk::Toolbar::Item>
            <AuLinkExternal @icon="external" @iconAlignment="right" @href="!#">
              {{t "codex"}}
            </AuLinkExternal>
          </Auk::Toolbar::Item>
           <Auk::Toolbar::Item>
            <AuLinkExternal @icon="external" @iconAlignment="right" @href="!#">
              {{t "belgian-official-gazette"}}
            </AuLinkExternal>
          </Auk::Toolbar::Item>
        </Auk::Toolbar::Group>
      </Auk::Toolbar>
    </Auk::Panel::Header>
    <Auk::Panel::Body>
      <p class="auk-overline">
        {{t "publication"}} 
        - via ministerraad - 6171</p>
      <AuHeading @level="4" @skin="4">{{capitalize @subcase.shortTitle}}</AuHeading>
      {{#if @subcase.title}}
      <p class="auk-u-mb-0">{{capitalize @subcase.title}}</p>
      {{/if}}
    </Auk::Panel::Body>
    <Auk::Panel::Body>
      <div class="au-o-grid au-o-grid--small au-u-1-1">
        <div class="au-o-grid__item au-u-1-2 au-u-1-4@medium">
          <AuHeading @level="4" @skin="6">
            {{t "status"}}
          </AuHeading>
          <div class="au-u-margin-top-tiny">
            <Publications::Publication::StatusPill 
              @publicationFlow={{@publicationFlow}}
            />
          </div>
        </div>
        <div class="au-o-grid__item au-u-1-2 au-u-1-4@medium">
          <AuHeading @level="4" @skin="6">
            {{t "publication-flow-numac-number-text"}}
          </AuHeading>
          <p class="auk-u-mt-1">2022031830</p>
        </div>
      </div>
    </Auk::Panel::Body>
  </Auk::Panel>
</div>