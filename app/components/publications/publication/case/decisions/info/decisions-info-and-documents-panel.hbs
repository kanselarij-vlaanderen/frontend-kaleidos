<div  id="case" class="auk-u-mb-4">
  <Auk::Panel data-test-subcase-description-panel>
    <Auk::Panel::Header>
      <Auk::Toolbar>
        <Auk::Toolbar::Group @position="left">
          <Auk::Toolbar::Item>
            <div class="au-u-flex au-u-flex--spaced-small">
              <h4 class="auk-panel__title">
                {{t "decisions-info"}}
              </h4>
            </div>
          </Auk::Toolbar::Item>
        </Auk::Toolbar::Group>
      </Auk::Toolbar>
    </Auk::Panel::Header>
    <Auk::Panel::Body>
      <div class="au-o-grid au-u-1-1">
        <div class="au-o-grid__item au-u-1-2 au-u-1-4@medium">
          <AuHeading @level="4" @skin="6">{{t "regulation-type"}}</AuHeading>
            {{#if @publicationFlow.regulationType}}
              {{@publicationFlow.regulationType.label}}
            {{else}}
              {{t "dash"}}
            {{/if}}
        </div>
        <div class="au-o-grid__item au-u-1-2 au-u-1-4@medium">
          <AuHeading @level="4" @skin="6">{{t "decision-date"}}</AuHeading>
          {{#if @publicationFlow.decisionActivity.startDate}}
            {{date @publicationFlow.decisionActivity.startDate}}
          {{else}}
            {{t "dash"}}
          {{/if}}
        </div>
      </div>
    </Auk::Panel::Body>
    <Auk::Panel::Body class="auk-panel__body auk-u-bg-alt">
      {{#each @pieces as |piece|}}
        <div class="vlc-procedure-step vlc-procedure-step--nopadding">
          <div class="vlc-procedure-step__badge-wrapper">
            <AuBadge
              @icon="document"
              @skin="action"
              class="au-c-badge--medium"
            />
          </div>
          <div>
            <Publications::Documents::DocumentCardStep
              @piece={{piece}}
              @isEnabledDelete={{false}}
            />
          </div>
        </div>
      {{else}}
        <div class="vlc-procedure-step vlc-procedure-step--nopadding">
          <div class="vlc-procedure-step__badge-wrapper">
            <AuBadge
              @icon="circle-info"
              @skin="action"
              class="au-c-badge--medium"
            />
          </div>
          <div>
            <p class="auk-u-m-4">
              {{t "no-documents-yet"}}
            </p>
          </div>
        </div>
      {{/each}}
    </Auk::Panel::Body>
  </Auk::Panel>
</div>