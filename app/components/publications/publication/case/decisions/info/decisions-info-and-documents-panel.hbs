<div  id="case" class="auk-u-mb-4">
  <Auk::Panel data-test-subcase-description-panel>
    <Auk::Panel::Header>
      <Auk::Toolbar>
        <Auk::Toolbar::Group @position="left">
          <Auk::Toolbar::Item>
            <div class="au-u-flex au-u-flex--spaced-small">
              <h4 class="auk-panel__title">
                {{t "decisions-info"}}
              </h4>
            </div>
          </Auk::Toolbar::Item>
        </Auk::Toolbar::Group>
      </Auk::Toolbar>
    </Auk::Panel::Header>
    <Auk::Panel::Body>
      <div class="au-o-grid au-u-1-1">
        <div class="au-o-grid__item au-u-1-2 au-u-1-4@medium">
          <AuHeading @level="4" @skin="6">{{t "regulation-type"}}</AuHeading>
          <p>Besluit van de Vlaamse Regering</p>
        </div>
        <div class="au-o-grid__item au-u-1-2 au-u-1-4@medium">
          <AuHeading @level="4" @skin="6">{{t "decision-date"}}</AuHeading>
          <p>01-04-2023</p>
        </div>
      </div>
    </Auk::Panel::Body>
    <Auk::Panel::Body class="auk-panel__body auk-u-bg-alt">
        <div class="vlc-procedure-step vlc-procedure-step--nopadding">
        <div class="vlc-procedure-step__badge-wrapper">
          <AuBadge
            @icon="document"
            @skin="action"
            class="au-c-badge--medium"
          />
        </div>
        <div>
          <Auk::Panel
          >
            <Auk::Panel::Body>
              <div class="vlc-document-card vlc-document-card--borderless">
                <div class="vlc-document-card__content">
                  <Auk::Toolbar @auto={{true}} as |Toolbar|>
                    <Toolbar.Group @position="left" as |Group|>
                      <Group.Item class="auk-u-maximize-width">
                        <AuLinkExternal @href="#!">
                          61171_Getekend BVR (met subsidie).pdf
                        </AuLinkExternal>
                        <div class="vlc-document-card-content__meta">
                          Ontvangen op 20-04-2022
                        </div>
                      </Group.Item>
                    </Toolbar.Group>
                  </Auk::Toolbar>
                </div>
              </div>
            </Auk::Panel::Body>
          </Auk::Panel>
        </div>
      </div>
    </Auk::Panel::Body>
  </Auk::Panel>
</div>