<div class="auk-u-mb-3">
  {{#if this.isEditing}}
    <Auk::Panel class="auk-panel--editing">
      <Auk::Panel::Header>
        <Auk::Toolbar::Group @position="left">
          <Auk::Toolbar::Item>
            <h4 class="auk-panel__title">
              {{t "publication-inscription"}}
            </h4>
          </Auk::Toolbar::Item>
        </Auk::Toolbar::Group>
      </Auk::Panel::Header>
      <Auk::Panel::Body>
        <Utils::LoadableContent @isLoading={{this.save.isRunning}} @reserveSpace={{true}}>
          <div class="auk-form-group">
            <Auk::Label @required={{true}} @error={{this.showShortTitleError}}>
              {{t "short-title"}}
            </Auk::Label>
            <Auk::Textarea data-test-inscription-edit-short-title
              @rows="2"
              @value={{this.shortTitle}}
              {{on "focusout" this.enableErrorDisplay}}
            />
            {{#if this.showShortTitleError}}
              <Auk::FormHelpText
                data-test-inscription-edit-short-title-error
                @text={{t "input-error-message"}}
                @skin="danger"
                @icon="alert-triangle"
              />
            {{/if}}
          </div>
          <div class="auk-form-group">
            <Auk::Label>
              {{t "long-title"}}
            </Auk::Label>
            <Auk::Textarea data-test-inscription-edit-long-title
              @rows="4"
              @value={{this.longTitle}}
            />
          </div>
        </Utils::LoadableContent>
      </Auk::Panel::Body>
      <Auk::Panel::Footer>
        <Auk::Toolbar>
          <Auk::Toolbar::Group @position="left">
            <Auk::Toolbar::Item>
              <Auk::Button
                data-test-inscription-edit-cancel
                @skin="borderless"
                @disabled={{this.save.isRunning}}
                {{on "click" this.closeEditingPanel}}>
                {{t "cancel"}}
              </Auk::Button>
            </Auk::Toolbar::Item>
          </Auk::Toolbar::Group>
          <Auk::Toolbar::Group @position="right">
            <Auk::Toolbar::Item>
              <Auk::Button
                data-test-inscription-edit-save
                @skin="primary"
                @loading={{this.save.isRunning}}
                @disabled={{not this.isShortTitleValid}}
                {{on "click" (perform this.save)}}>
                {{t "save"}}
              </Auk::Button>
            </Auk::Toolbar::Item>
          </Auk::Toolbar::Group>
        </Auk::Toolbar>
      </Auk::Panel::Footer>
    </Auk::Panel>
  {{else}}
    <Auk::Panel>
      <Auk::Panel::Header>
        <Auk::Toolbar>
          <Auk::Toolbar::Group @position="left">
            <Auk::Toolbar::Item>
              <h4 class="auk-panel__title">
                {{t "publication-inscription"}}
              </h4>
            </Auk::Toolbar::Item>
          </Auk::Toolbar::Group>
          <Auk::Toolbar::Group @position="right">
            {{#if this.isViaCouncilOfMinisters}}
              <Auk::Toolbar::Item>
                <Auk::Button
                  @skin="tertiary"
                  @layout="icon-right"
                  @icon="chevron-right"
                  @route="cases.case.subcases"
                  @model={{@publicationFlow.case.id}}
                >
                  {{t "to-case"}}
                </Auk::Button>
              </Auk::Toolbar::Item>
            {{/if}}
            <Auk::Toolbar::Item>
              <Auk::Button
                data-test-inscription-view-edit
                @skin="tertiary"
                @icon="pencil"
                @layout="icon-only"
                {{on "click" this.openEditingPanel}}
              />
            </Auk::Toolbar::Item>
          </Auk::Toolbar::Group>
        </Auk::Toolbar>
      </Auk::Panel::Header>
      <Auk::Panel::Body>
          <div class="auk-content">
            <h4 data-test-inscription-view-short-title>
              {{@publicationFlow.shortTitle}}
            </h4>
            <p data-test-inscription-view-long-title class="auk-u-text-prewrap">
              {{@publicationFlow.longTitle}}
            </p>
        </div>
      </Auk::Panel::Body>
    </Auk::Panel>
  {{/if}}
</div>