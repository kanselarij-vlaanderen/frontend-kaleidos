<div class="auk-o-flex auk-o-flex--spaced-wide">
  <Auk::List::Item
    data-test-document-list-piece
    class="auk-o-flex auk-o-flex--spaced-wide"
  >
    <div class="auk-o-flex auk-o-flex--spaced">
      <Auk::Badge @icon="paperclip" @size="regular" />
      <h5 class="auk-h4 auk-u-m-0">{{this.name}}</h5>
    </div>
    <Auk::ButtonLink
      @layout="icon-only"
      @icon="download"
      @href={{this.downloadUrl}}
      download
    >
      {{t "download"}}
    </Auk::ButtonLink>
    {{#if @viewable}}
      <Auk::ButtonLink
        @layout="icon-only"
        @icon="book"
        @href={{@piece.viewDocumentURL}}
        target="_blank"
      >
        {{t "read"}}
      </Auk::ButtonLink>
    {{/if}}
    {{#if @onDelete}}
      <Auk::Button
        @icon="trash"
        @layout="icon-only"
        @skin="danger-borderless"
        {{on "click" (fn @onDelete @piece)}}
      />
    {{/if}}
  </Auk::List::Item>
</div>