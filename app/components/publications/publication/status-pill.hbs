{{#if (await @publicationFlow.status)}}
  {{#if @publicationFlow.status}}
    <AuPill
      @size="small"
      @skin={{if @publicationFlow.status.isPublished "success" "warning" }}
    >
      {{@publicationFlow.status.label}}
    </AuPill>
  {{else}}
    <AuPill @size="small" @skin="warning">
      {{t "no-status"}}
    </AuPill>
  {{/if}}
{{else}}
  <AuPill @size="small" @skin="default">
    {{t "loading"}}
  </AuPill>
{{/if}}
