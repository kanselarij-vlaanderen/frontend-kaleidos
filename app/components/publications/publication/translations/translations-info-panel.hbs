<Auk::Panel class={{if this.isEditing "auk-panel--editing"}}>
  <Auk::Panel::Header>
    <Auk::Toolbar>
      <Auk::Toolbar::Group @position="left">
        <Auk::Toolbar::Item>
          <h4 class="auk-panel__title">
            {{t "translation-info"}}
          </h4>
        </Auk::Toolbar::Item>
      </Auk::Toolbar::Group>
      {{#unless this.isEditing}}
        <Auk::Toolbar::Group @position="right">
          <Auk::Toolbar::Item>
            <Auk::Button
              @skin="tertiary"
              @icon="pencil"
              @disabled={{@isFinal}}
              @layout="icon-only"
              {{on "click" this.openEditingPanel}}
            />
          </Auk::Toolbar::Item>
        </Auk::Toolbar::Group>
      {{/unless}}
    </Auk::Toolbar>
  </Auk::Panel::Header>

  {{#if this.isEditing}}
    <Auk::Panel::Body>
      <div class="auk-o-grid">
        <div class="auk-o-grid-col-3">
          <div class="auk-form-group">
            <Auk::Label>{{t "publication-flow-translation-due-date"}}</Auk::Label>
            <Auk::Datepicker
              @date={{@translationSubcase.dueDate}}
              @onChange={{this.setTranslationDueDate}}
            />
            {{#if
              (and
                (not @isFinal)
                (is-after @translationSubcase.dueDate precision="days")
              )
            }}
              <Auk::FormHelpText
                @text={{t "date-expired"}}
                @skin="warning"
                @icon="alert-triangle"
              />
            {{/if}}
          </div>
        </div>
      </div>
    </Auk::Panel::Body>
    <Auk::Panel::Footer>
      <Auk::Toolbar>
        <Auk::Toolbar::Group @position="left">
          <Auk::Toolbar::Item>
            <Auk::Button
              @skin="borderless"
              @disabled={{this.save.isRunning}}
              {{on "click" this.closeEditingPanel}}
            >
              {{t "cancel"}}
            </Auk::Button>
          </Auk::Toolbar::Item>
        </Auk::Toolbar::Group>
        <Auk::Toolbar::Group @position="right">
          <Auk::Toolbar::Item>
            <Auk::Button @skin="primary" @loading={{this.save.isRunning}} {{on "click" (perform this.save)}}>
              {{t "save"}}
            </Auk::Button>
          </Auk::Toolbar::Item>
        </Auk::Toolbar::Group>
      </Auk::Toolbar>
    </Auk::Panel::Footer>
  {{else}}
    <Auk::Panel::Body>
      <div class="auk-o-grid">
        <div class="auk-o-grid-col-3 auk-content">
          <h4 class="auk-u-m-0">{{t "publication-flow-translation-due-date"}}</h4>
          <p class="auk-u-m-0">
            {{#if @translationSubcase.dueDate}}
              {{moment-format @translationSubcase.dueDate "DD-MM-YYYY"}}
            {{else}}
              -
            {{/if}}
          </p>
          {{#if
            (and
              (not @isFinal)
              (is-after @translationSubcase.dueDate precision="days")
            )
          }}
            <Auk::FormHelpText
              @text={{t "date-expired"}}
              @skin="warning"
              @icon="alert-triangle"
            />
          {{/if}}
        </div>
      </div>
    </Auk::Panel::Body>
  {{/if}}
</Auk::Panel>