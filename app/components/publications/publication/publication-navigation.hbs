<Auk::Tabs @reversed={{true}}>
  <Auk::Tab
    @isHierarchicalBack={{true}}
    @route="publications.index"
    data-test-publication-case-nav-go-back />
  <Auk::Tab
    @route="publications.publication.case"
    data-test-publication-case-nav-case>
    {{t "agendaitem-case"}}
  </Auk::Tab>
  {{#if @publicationFlow.case.subcases}}
    <Auk::Tab
      @route="publications.publication.documents"
      data-test-publication-case-nav-documents
    >
      <div class="auk-o-flex auk-o-flex--center">
        <span class="auk-u-mr-2">{{t "documents"}}</span>
        {{#unless this.loadData.isRunning}}
          <p>({{this.documentsCount}})</p>
        {{/unless}}
      </div>
    </Auk::Tab>
  {{/if}}
  <Auk::Tab
    @route="publications.publication.translations"
    data-test-publication-case-nav-translations
  >
    <div class="auk-o-flex auk-o-flex--center">
      <span>{{t "translations"}}</span>
      <Publications::Publication::Translations::TranslationProgressBadge @translationSubcase={{@publicationFlow.translationSubcase}}/>
    </div>
  </Auk::Tab>
  <Auk::Tab
    @route="publications.publication.proofs"
    data-test-publication-case-nav-publishpreview
  >
    <div class="auk-o-flex auk-o-flex--center">
      <span>{{t "publishpreview-requests"}}</span>
      <Publications::Publication::Proofs::ProofsProgressBadge @publicationSubcase={{@publicationFlow.publicationSubcase}}/>
    </div>
  </Auk::Tab>
</Auk::Tabs>