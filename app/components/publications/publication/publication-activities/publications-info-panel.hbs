<Auk::Panel class={{if this.isEditing "auk-panel--editing"}}>
  <Auk::Panel::Header>
    <Auk::Toolbar>
      <Auk::Toolbar::Group @position="left">
        <Auk::Toolbar::Item>
          <h4 class="auk-panel__title">
            {{t "publication-info"}}
          </h4>
        </Auk::Toolbar::Item>
      </Auk::Toolbar::Group>
      {{#unless this.isEditing}}
        <Auk::Toolbar::Group @position="right">
          <Auk::Toolbar::Item>
            <Auk::Button
              data-test-publications-info-panel-edit
              @skin="tertiary"
              @icon="pencil"
              @layout="icon-only"
              {{on "click" this.openEditingPanel}}
            />
          </Auk::Toolbar::Item>
        </Auk::Toolbar::Group>
      {{/unless}}
    </Auk::Toolbar>
  </Auk::Panel::Header>

  {{#if this.isEditing}}
    <Auk::Panel::Body>
      <div class="auk-o-grid">
        <div class="auk-o-grid-col-3">
          <div
            data-test-publications-info-panel-target-end-date
            class="auk-form-group"
          >
            <Auk::Label>{{t "publication-target-end-date"}}</Auk::Label>
            <Auk::Datepicker
              @date={{@publicationSubcase.targetEndDate}}
              @onChange={{this.setTargetEndDate}}
            />
          </div>
        </div>
        <div class="auk-o-grid-col-3">
          <div class="auk-form-group">
            <Auk::Label>
              {{t "publication-date"}}
            </Auk::Label>
            {{#unless this.loadDecision.isRunning}}
              {{#if @publicationFlow.status.isPublished}}
                {{#if this.decision.isStaatsbladResource}}
                  {{#if this.decision.publicationDate}}
                    {{moment-format this.decision.publicationDate "DD-MM-YYYY"}}
                  {{else}}
                    {{!case: publication-date is not found in Staatsblad (does not seem to occur)}}
                    <div class="auk-u-text-muted auk-u-italic">
                      {{t "not-known"}}
                    </div>
                  {{/if}}
                {{else}}
                  <Auk::Datepicker
                    @date={{this.decision.publicationDate}}
                    @onChange={{this.setPublicationDate}}
                  />
                {{/if}}
              {{else}}
                <div class="auk-u-text-muted auk-u-italic">
                  {{t "not-published"}}
                </div>
              {{/if}}
            {{/unless}}
          </div>
        </div>
      </div>
    </Auk::Panel::Body>
    <Auk::Panel::Footer>
      <Auk::Toolbar>
        <Auk::Toolbar::Group @position="left">
          <Auk::Toolbar::Item>
            <Auk::Button
              @skin="borderless"
              @disabled={{this.save.isRunning}}
              {{on "click" this.closeEditingPanel}}
            >
              {{t "cancel"}}
            </Auk::Button>
          </Auk::Toolbar::Item>
        </Auk::Toolbar::Group>
        <Auk::Toolbar::Group @position="right">
          <Auk::Toolbar::Item>
            <Auk::Button
              data-test-publications-info-panel-save
              @skin="primary"
              @loading={{this.save.isRunning}}
              {{on "click" (perform this.save)}}
            >
              {{t "save"}}
            </Auk::Button>
          </Auk::Toolbar::Item>
        </Auk::Toolbar::Group>
      </Auk::Toolbar>
    </Auk::Panel::Footer>
  {{else}}
    <Auk::Panel::Body>
      <div class="auk-o-grid">
        <div class="auk-o-grid-col-3 auk-content">
          <h4 class="auk-u-m-0">{{t "publication-target-end-date"}}</h4>
          <p class="auk-u-m-0">
            {{#if @publicationSubcase.targetEndDate}}
              {{moment-format @publicationSubcase.targetEndDate "DD-MM-YYYY"}}
            {{else}}
              {{t "dash"}}
            {{/if}}
          </p>
        </div>
        <div class="auk-o-grid-col-3 auk-content">
          <h4 class="auk-u-m-0">{{t "publication-date"}}</h4>
          <p class="auk-u-m-0">
            {{#unless this.loadDecision.isRunning}}
              {{#if @publicationFlow.status.isPublished}}
                {{#if this.decision.publicationDate}}
                  {{moment-format this.decision.publicationDate "DD-MM-YYYY"}}
                {{else}}
                  {{#if this.decision.isStaatsbladResource}}
                    <div class="auk-u-text-muted auk-u-italic">
                      {{!case: publication-date is not found in Staatsblad (does not seem to occur)}}
                      {{t "not-known"}}
                    </div>
                  {{else}}
                    {{!case: user cleared publication-date in this panel}}
                    {{t "dash"}}
                  {{/if}}
                {{/if}}
              {{else}}
                <div class="auk-u-text-muted auk-u-italic">
                  {{t "not-published"}}
                </div>
              {{/if}}
            {{/unless}}
          </p>
        </div>
      </div>
    </Auk::Panel::Body>
  {{/if}}
</Auk::Panel>