<Auk::Panel class={{if this.isEditing "auk-panel--editing"}}>
  <Auk::Panel::Header>
    <Auk::Toolbar>
      <Auk::Toolbar::Group @position="left">
        <Auk::Toolbar::Item>
          <h4 class="auk-panel__title">
            {{t "publication-info"}}
          </h4>
        </Auk::Toolbar::Item>
      </Auk::Toolbar::Group>
      <Auk::Toolbar::Group @position="right">
        <Auk::Toolbar::Item>
          <Auk::Button
            @skin="tertiary"
            @icon="pencil"
            @disabled={{this.publicationStatus.isWithdrawn}}
            @loading={{this.loadStatus.isRunning}}
            @layout="icon-only"
            {{on "click" this.openEditingPanel}}
          />
        </Auk::Toolbar::Item>
      </Auk::Toolbar::Group>
    </Auk::Toolbar>
  </Auk::Panel::Header>

  {{#if this.isEditing}}
    <Auk::Panel::Body>
      <div class="auk-o-grid">
        <div class="auk-o-grid-col-3">
          <div class="auk-form-group">
            <Auk::Label>{{t "publication-target-end-date"}}</Auk::Label>
            <Auk::Datepicker
              @date={{this.targetEndDate}}
              @onChange={{this.setTargetEndDate}}
            />
          </div>
        </div>
        <div class="auk-o-grid-col-3">
          <div class="auk-form-group">
            <Auk::Label for="blockInput">
              {{t "kind-of-publication"}}
            </Auk::Label>
            <PowerSelect
              @options={{this.publicationModes}}
              @onChange={{this.setPublicationMode}}
              @selected={{this.mode}}
              as |mode|
            >
              {{mode.label}}
            </PowerSelect>
          </div>
        </div>
      </div>
    </Auk::Panel::Body>
    <Auk::Panel::Footer>
      <Auk::Toolbar>
        <Auk::Toolbar::Group @position="left">
          <Auk::Toolbar::Item>
            <Auk::Button
              @skin="borderless"
              @disabled={{this.save.isRunning}}
              {{on "click" this.closeEditingPanel}}
            >
              {{t "cancel"}}
            </Auk::Button>
          </Auk::Toolbar::Item>
        </Auk::Toolbar::Group>
        <Auk::Toolbar::Group @position="right">
          <Auk::Toolbar::Item>
            <Auk::Button @skin="primary"  @loading={{this.save.isRunning}} {{on "click" (perform this.save)}}>
              {{t "save"}}
            </Auk::Button>
          </Auk::Toolbar::Item>
        </Auk::Toolbar::Group>
      </Auk::Toolbar>
    </Auk::Panel::Footer>
  {{else}}
    <Auk::Panel::Body>
      <div class="auk-o-grid">
        <div class="auk-o-grid-col-3 auk-content">
          <h4 class="auk-u-m-0">{{t "publication-target-end-date"}}</h4>
          <p class="auk-u-m-0">
            {{#if  @publicationSubcase.targetEndDate}}
              {{moment-format @publicationSubcase.targetEndDate "DD-MM-YYYY"}}
            {{else}}
              -
            {{/if}}
          </p>
        </div>
        <div class="auk-o-grid-col-3 auk-content">
          <h4 class="auk-u-m-0">{{t "kind-of-publication"}}</h4>
          <p class="auk-u-m-0">
            {{#if @publicationFlow.mode}}
              {{@publicationFlow.mode.label}}
            {{else}}
              -
            {{/if}}
          </p>
        </div>
      </div>
    </Auk::Panel::Body>
  {{/if}}
</Auk::Panel>