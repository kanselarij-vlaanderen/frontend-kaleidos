<Auk::Modal>
  <Auk::Modal::Header
    @title={{t
      (if
        @isCorrected
        "upload-corrected-proof-for-publication-x-identification"
        "upload-proof-for-publication-x-identification"
      )
      identification=@publicationFlow.identification.idName
    }}
    @onClose={{perform this.cancel}}
  />
  <Auk::Modal::Body>
    <Utils::LoadableContent
      @isLoading={{this.isLoading}}
      @reserveSpace={{true}}
    >

      <Auk::FileUploader @onUpload={{this.onUploadFile}} />

      {{! File details }}
      {{#if this.file}}
        <div class="auk-u-mt-4">
          <div class="auk-o-grid">
            <div class="auk-o-grid-col-11">
              <div
                class="auk-form-group-layout auk-form-group-layout--horizontal"
              >
                <div class="auk-form-group {{this.validators.name.errorClass}}">
                  <Auk::Label for="proofUploadName" @required={{true}}>
                    {{t "name"}}
                  </Auk::Label>
                  <Auk::Input
                    data-test-proof-upload-name
                    id="proofUploadName"
                    @value={{mut this.name}}
                    {{on "input" this.validators.name.enableError}}
                  />
                </div>
                <div class="auk-form-group">
                  <Auk::Label>{{t "file-type"}}</Auk::Label>
                  <Utils::Documents::FileTypePill
                    @extension={{this.file.extension}}
                  />
                </div>
                {{#if @isReceived}}
                  <div
                    class="auk-form-group
                      {{this.validators.receivedAtDate.errorClass}}"
                  >
                    <Auk::Label for="proofUploadReceivedAtDate">
                      {{t "received-at"}}
                    </Auk::Label>
                    <Auk::Datepicker
                      id="proofUploadReceivedAtDate"
                      @date={{this.receivedAtDate}}
                      @onChange={{this.setReceivedAtDate}}
                    />
                  </div>
                {{/if}}
                {{#if @isCorrected}}
                  <div class="auk-form-group">
                    <Auk::Label for="proofUploadIsCorrected">
                      {{t "corrected"}}
                    </Auk::Label>
                    <Auk::Checkbox
                      id="proofUploadIsCorrected"
                      @checked={{@isCorrected}}
                      @disabled={{true}}
                    />
                  </div>
                {{/if}}
                <div class="auk-form-group">
                  <Auk::Label for="proofIn">
                    {{t "set-status-proof-in"}}
                  </Auk::Label>
                  <Auk::Checkbox
                    id="proofIn"
                    @checked={{this.isProofIn}}
                    {{on "input" this.toggleProofIn}}
                  />
                </div>
              </div>
            </div>
          </div>
        </div>
      {{/if}}

    </Utils::LoadableContent>
  </Auk::Modal::Body>
  <Auk::Modal::Footer
    @cancelDisabled={{this.isCancelDisabled}}
    @onCancel={{perform this.cancel}}
  >
    <Auk::Button
      data-test-proof-upload-save
      @skin="primary"
      @disabled={{this.isSaveDisabled}}
      @loading={{this.save.isRunning}}
      {{on "click" (perform this.save)}}
    >
      {{t "save"}}
    </Auk::Button>
  </Auk::Modal::Footer>
</Auk::Modal>