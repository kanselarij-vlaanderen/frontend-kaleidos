<Auk::Sidebar
  @size="small"
  @position="left"
  @skin="gray-200"
  class="auk-scroll-wrapper"
  @isCollapsed={{false}}
>
  <Auk::Navbar @skin="gray-200" class="au-u-visible-from@medium">
    <Auk::Toolbar as |Toolbar|>
      <Toolbar.Group @position="left">
        <AuHeading @level="2" @skin="6">{{t "subcases"}}</AuHeading>
      </Toolbar.Group>
      <Toolbar.Group @position="left" as |Group|>
        <Group.Item />
      </Toolbar.Group>
    </Auk::Toolbar>
  </Auk::Navbar>
  <div class="auk-scroll-wrapper__body auk-scroll-wrapper__body--vertical">
    <Auk::Tabs @responsive={{true}} @vertical={{true}} @responsiveBreakpoint="small"
    @expanded={{true}}>
      {{#each this.items as |item|}}
        {{#if (eq item.type "regular")}}
          <Subcases::SideNav::Subcase
            @subcase={{item.subcase}}
            @selected={{false}}
            @number={{item.number}}
          />
        {{else if (eq item.type "parliament")}}
          <Subcases::SideNav::ParliamentSubcase
            @subcase={{item.subcase}}
            @latestSubmissionActivity={{item.latestSubmissionActivity}}
            @latestRetrievalActivity={{item.latestRetrievalActivity}}
            @parliamentFlow={{item.parliamentFlow}}
            @date={{item.sortDate}}
            @selected={{false}}
          />
        {{else if (eq item.type "publication")}}
          <Subcases::SideNav::PublicationSubcase
            @decisionmakingFlow={{item.decisionmakingFlow}}
            @publicationFlow={{item.publicationFlow}}
            @date={{item.sortDate}}
            @selected={{false}}

          />
        {{/if}}
      {{/each}}
    </Auk::Tabs>
  </div>
</Auk::Sidebar>
