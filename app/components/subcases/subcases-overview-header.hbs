<div class="auk-navbar auk-navbar--bordered-bottom auk-navbar--gray-100">
  {{!-- TODO: is this double wrapped toolbar here on purpose? --}}
  <Auk::Toolbar>
    <Auk::Toolbar>
      <WebComponents::AuToolbar::Group>
        <Auk::Toolbar::Item>
          <Auk::Button
            @skin="borderless"
            @icon="chevron-left"
            @layout="icon-only"
            {{on "click" @backLink}}
          />
        </Auk::Toolbar::Item>
        <Auk::Toolbar::Item>
          <div class="auk-u-my">
            <span class="auk-overline auk-u-block">
              {{t "case"}}
            </span>
            <Auk::AbbreviatedText @text={{this.caseTitleFromCase}} @maxLength={{250}} />
          </div>
        </Auk::Toolbar::Item>
      </WebComponents::AuToolbar::Group>
      {{#if currentSession.isEditor}}
        <WebComponents::AuToolbar::Group @position="right">
          <Auk::Toolbar::Item>
            <Auk::Button
              @skin="primary"
              @icon="add"
              {{on "click" this.toggleIsAddingSubcase}}
              data-test-subcase-overview-header-create-subcase
            >
              {{t "create-subcase"}}
            </Auk::Button>
          </Auk::Toolbar::Item>
        </WebComponents::AuToolbar::Group>
      {{/if}}
    </Auk::Toolbar>
  </Auk::Toolbar>
</div>


{{!-- MODAL --}}

{{#if isAddingSubcase}}
  {{#web-components/vl-modal
    isOverlay=true
    large=true
    closeModal=(action "close")
    title=(t "create-subcase")
  }}
    {{cases/new-subcase
      title=this.title
      shortTitle=this.shortTitle
      case=(await @model.case)
      closeModal=(action "close")
      refresh=(action "refresh")
    }}
  {{/web-components/vl-modal}}
{{/if}}