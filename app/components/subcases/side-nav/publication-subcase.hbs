<li class="auk-sidebar__item auk-sidebar__item--styled auk-sidebar__item--inside-link {{if @selected 'auk-sidebar__item--active'}}">
  <LinkTo
    @route="cases.case.publication-flow"
    @models={{array @decisionmakingFlow.id @publicationFlow.id}}
  >
    <div
      class="auk-sidebar__label au-u-flex au-flex--vertical-center au-u-flex--spaced-tiny"
    >
      <strong>{{t "publication-flow"}}</strong>
    </div>
    <div class="auk-sidebar__sublabel au-u-margin-top-none">
      {{t "last-edited-on"}}
      {{datetime @publicationFlow.modified}}
    </div>
    <div class="au-u-margin-top-tiny">
      <Publications::Publication::StatusPill 
        @publicationFlow={{@publicationFlow}}
      />
    </div>
  </LinkTo>
</li>
