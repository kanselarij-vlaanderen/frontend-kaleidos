<Auk::TabExpanded
  data-test-subcase-side-nav-subcase
  @route="cases.case.subcases.subcase"
  @current-when="cases.case.subcases.subcase"
  @model={{@subcase.id}}
>
  <div class="auk-sidebar__label au-u-flex au-flex--vertical-center au-u-flex--spaced-tiny">
    {{#if this.label}}
      <strong>{{capitalize this.label}}</strong>
    {{/if}} 
  </div>
  <div class="auk-sidebar__sublabel au-u-margin-top-none">
    {{t "last-edited-on"}} {{datetime @subcase.modified}}
  </div>
  <div data-test-subcase-side-nav-decision class="au-u-margin-top-tiny">
    <Decision::DecisionResultPill
      @decisionResultCode={{this.decisionResultCode}}
    />
  </div>
</Auk::TabExpanded>
