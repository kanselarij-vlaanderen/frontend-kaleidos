{{#each subcases as |subcase|}}
  {{#subcases/subcase-item subcase=subcase}}
    <hr class="vlc-hr" />
    <div class="vl-u-spacer-extended-bottom-s">
      <p class="vlc-subline">
        {{await subcase.case.type.label}}
      </p>
    </div>
    <div class="vl-u-spacer-extended-bottom-s">
      <div class="vl-title vl-title--h5">
        {{subcase.shortTitle}}
      </div>
    </div>
    <div class="vl-u-spacer-extended-bottom">
      <p>
        {{subcase.title}}
      </p>
    </div>
    <div class="js-vl-accordion">
      <button
        class="vl-toggle vl-link vl-link--bold"
        data-vl-accordion-toggle=""
        data-vl-accordion-dressed="true"
        aria-expanded="false"
        {{action "toggleIsShowingDocuments"}}
      >
        {{#if isShowingDocuments}}
          <i
            class="vl-link__icon vl-link__icon--before vl-toggle__icon vl-vi vl-vi-arrow-down-fat"
            aria-hidden="true"
          ></i>
        {{else}}
          <i
            class="vl-link__icon vl-link__icon--before vl-toggle__icon vl-vi vl-vi-arrow-right-fat"
            aria-hidden="true"
          ></i>
        {{/if}}
        {{t "documents"}}
      </button>
    </div>
    {{#if isShowingDocuments}}
      <div class="vl-accordion__panel">
        <div class="vl-u-spacer-extended-top">
          {{utils/documents-list-for-item item=subcase}}
        </div>
      </div>
    {{/if}}
  {{/subcases/subcase-item}}
{{/each}}