<Auk::Modal @size="small">
  <Auk::Modal::Header
    @title={{t "unpublish-publication-modal-title"}}
    @onClose={{@onCancel}}
  />
  <Auk::Modal::Body>
    <fieldset>
      <legend class="auk-label">
        {{t "unpublish-publication-scope-selection"}}
      </legend>
      <Auk::RadioList as |List|>
        {{#each this.options as |option|}}
          <List.Radio
            @label={{option.label}}
            @checked={{eq this.selectedOption.value option.value}}
            value={{option.value}}
            {{on "change" this.selectOption}}
          />
        {{/each}}
      </Auk::RadioList>
    </fieldset>
  </Auk::Modal::Body>
  <Auk::Modal::Footer @onCancel={{@onCancel}}>
    <Auk::Button
      @skin="primary"
      @loading={{this.confirmUnpublish.isRunning}}
      {{on "click" (perform this.confirmUnpublish)}}
    >
      {{t "retract-from-public"}}
    </Auk::Button>
  </Auk::Modal::Footer>
</Auk::Modal>
