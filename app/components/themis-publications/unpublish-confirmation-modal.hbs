<Auk::Modal @size="small">
  <Auk::Modal::Header
    @title={{t "unpublish-publication-modal-title"}}
    @onClose={{@onCancel}}
  />
  <Auk::Modal::Body>
    <AuFieldset as |Fieldset|>
      <Fieldset.legend>{{t "unpublish-publication-scope-selection"}}</Fieldset.legend>
      <Fieldset.content>
        <Auk::RadioList as |List|>
          {{#each this.options as |option|}}
            <List.Radio
              @label={{option.label}}
              @value={{option.value}}
              @onChange={{this.selectOption}}
              checked={{eq this.selectedOption.value option.value}}
            />
          {{/each}}
        </Auk::RadioList>
      </Fieldset.content>
    </AuFieldset>
  </Auk::Modal::Body>
  <Auk::Modal::Footer @onCancel={{@onCancel}}>
    <AuButton
      @skin="primary"
      @loading={{this.confirmUnpublish.isRunning}}
      @disabled={{this.confirmUnpublish.isRunning}}
      {{on "click" (perform this.confirmUnpublish)}}
    >
      {{t "retract-from-public"}}
    </AuButton>
  </Auk::Modal::Footer>
</Auk::Modal>
