<AuModal
  @modalOpen={{@modalOpen}}
  @closeModal={{@onCancel}}
  @overflow={{@overflow}}
>
  <:title>
    {{#if (has-block "title")}}
      {{yield to="title"}}
    {{else if @title}}
      {{@title}}
    {{/if}}
  </:title>

  <:body>
    {{#if (has-block "body")}}
      {{yield to="body"}}
    {{else if @message}}
      {{@message}}
    {{/if}}
  </:body>

  <:footer>
    {{#if (has-block "footer")}}
      {{yield to="footer"}}
    {{else}}
        <AuToolbar
          as |Group|
        >
          <Group>
            <AuButton
              data-test-confirmation-modal-cancel
              @skin="naked"
              {{on "click" @onCancel}}
            >
              {{#if @cancelMessage}}
                {{@cancelMessage}}
              {{else}}
                {{t "cancel"}}
              {{/if}}
            </AuButton>
          </Group>
          <Group>
            <AuButton
              data-test-confirmation-modal-confirm
              @alert={{@alert}}
              @disabled={{or @disabled @loading}}
              @loading={{@loading}}
              @icon={{@confirmIcon}}
              {{on "click" @onConfirm}}
            >
              {{#if @confirmMessage}}
                {{@confirmMessage}}
              {{else}}
                {{t "confirm"}}
              {{/if}}
            </AuButton>
          </Group>
        </AuToolbar>
    {{/if}}
  </:footer>
</AuModal>