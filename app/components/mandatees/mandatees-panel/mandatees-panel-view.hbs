<Auk::Panel>
  <Auk::Panel::Header>
    <Auk::Toolbar>
      <Auk::Toolbar::Group @position="left">
        <Auk::Toolbar::Item>
          <h4 class="auk-panel__title">{{t "ministers"}}</h4>
        </Auk::Toolbar::Item>
      </Auk::Toolbar::Group>
      {{#if @showEditButton}}
        <Auk::Toolbar::Group @position="right">
          <Auk::Toolbar::Item>
            <AuButton
              data-test-mandatee-panel-view-edit={{true}}
              @skin="naked"
              @icon="pencil"
              {{on "click" @onClickEdit}}
            >
              {{t "edit"}}
            </AuButton>
          </Auk::Toolbar::Item>
        </Auk::Toolbar::Group>
      {{/if}}
    </Auk::Toolbar>
  </Auk::Panel::Header>
  {{#if @mandatees.length}}
    <Auk::Panel::Body @noPadding={{true}}>
      <table class="auk-table">
        <thead class="au-u-hidden-visually">
          <tr>
            <th>{{t "minister"}}</th>
            <th>{{t "submitter"}}</th>
          </tr>
        </thead>
        <tbody>
          {{#each @mandatees as |mandatee|}}
            <tr data-test-mandatee-panel-view-mandatee-row>
              <td
                class="auk-table__col--10"
                data-test-mandatee-panel-view-row-name
              >
                <div class="auk-o-flex auk-o-flex--vertical-center">
                  <AuBadge
                    @icon="user"
                    @skin="gray"
                    @size="small"
                  />
                  <span class="auk-u-mx-2">
                    {{mandatee.person.fullName}}, {{mandatee.title}}
                  </span>
                </div>
              </td>
              <td
                class="auk-u-text-align--right"
                data-test-mandatee-panel-view-row-submitter
              >
                {{#if (eq mandatee @submitter)}}
                  <AuPill @size="small" @icon="check" @skin="success">Indiener</AuPill>
                {{/if}}
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </Auk::Panel::Body>
  {{else}}
    <Auk::Panel::Body>
      <Auk::EmptyState @message={{or @emptyStateMessage (t "no-ministers-added")}} />
    </Auk::Panel::Body>
  {{/if}}
</Auk::Panel>