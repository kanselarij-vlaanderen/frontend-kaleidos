<AuFormRow>
  {{#if @showLabel}}
    <Auk::Label>
      {{t "ministers"}}
    </Auk::Label>
  {{/if}}
    {{#if @multiple}}
      <PowerSelectMultiple
        data-test-mandatee-person-selector
        @options={{this.loadOptions}}
        @selected={{this.selectedMandateePersons}}
        @onChange={{this.onChange}}
        @searchEnabled={{true}}
        @searchField="fullName"
        @noMatchesMessage={{t "no-ministers-found"}}
        @searchMessage={{t "no-ministers-found"}}
        @loadingMessage={{t "search-loading-text"}} as |person|
      >
        {{person.fullName}}
      </PowerSelectMultiple>
    {{else}}
      <PowerSelect
        data-test-mandatee-person-selector
        @options={{this.loadOptions}}
        @selected={{this.selectedMandateePerson}}
        @onChange={{this.onChange}}
        @searchEnabled={{true}}
        @searchField="fullName"
        @noMatchesMessage={{t "no-ministers-found"}}
        @searchMessage={{t "no-ministers-found"}}
        @loadingMessage={{t "search-loading-text"}} as |person|
      >
        {{person.fullName}}
      </PowerSelect>
  {{/if}}
</AuFormRow>