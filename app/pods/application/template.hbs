<div class="ember-view">
  {{page-title (t "page-title")}}
  {{head-layout}}
  {{#each this.systemAlert.unconfirmedAlerts as |alert|}}
    <Utils::SystemAlert
      @type={{alert.type.label}}
      @title={{alert.title}}
      @message={{alert.message}}
      @onClose={{action this.systemAlert.confirmAlert alert}}
    />
  {{/each}}
  {{#if this.toaster.toasts.length}}
    {{!-- TODO: Currently, many toasts are automatically generated by the application adapter.
                                  A lot of this data-handling doesn't concern the user. We should manually implement toasts on save-
                                  operations where it is relevant for the user, and do away with the generated ones.
                                  the {{array this.toaster.toasts.firstObject}} below is a workaround to limit the number of simultanously shown toasts to 1.
                                  --}}
    <Utils::Toaster @toasts={{array this.toaster.toasts.firstObject}} />
  {{/if}}
  {{#if this.currentSession.group}}
    <MHeader />
  {{/if}}
  {{outlet}}
</div>