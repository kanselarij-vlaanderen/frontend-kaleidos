{{page-title (t "cases")}}
<Cases::CasesHeader @isAddingCase={{this.isAddingCase}} @close={{this.close}} />
<div class="auk-scroll-wrapper__body">
  <div class="auk-u-m-8">
    <Auk::Toolbar>
      <Auk::Toolbar::Group @position="right">
        {{#if this.currentSession.isEditor}}
          <Auk::Toolbar::Item class="auk-o-flex auk-o-flex--vertical-center">
            <Auk::Label
              class="auk-u-text-nowrap auk-u-mr-2 auk-u-p-0"
              for="show-cases-archived"
            >
              {{t "show-archived"}}
            </Auk::Label>
            <Auk::Toggle
              id="show-cases-archived"
              @checked={{this.showArchived}}
            />
          </Auk::Toolbar::Item>
        {{/if}}
      </Auk::Toolbar::Group>
    </Auk::Toolbar>
    <DataTable
      data-test-route-cases-overview-data-table={{true}}
      @content={{await this.model}}
      @page={{this.page}}
      @noDataMessage={{t "no-results-found"}}
      @size={{this.size}}
      @sort={{this.sort}}
      class="auk-table auk-table--striped"
      @isLoading={{this.isLoadingModel}}
      as |table|
    >
      <table.content as |c|>
        <c.header>
          <th class="auk-table__col--9">
            {{t "case-name"}}
          </th>
          <ThSortable
            class="auk-table__col--1"
            @currentSorting={{this.sort}}
            @field="created"
            @label={{t "created-on"}}
          />
          <th class="auk-table__col--1"></th>
        </c.header>
        {{! Users explicitly want the whole row to be clickable instead of only the arrow at the end }}
        {{! template-lint-disable no-invalid-interactive }}
        <c.body class="auk-table--clickable-rows" as |row|>
          <td {{on "click" (fn this.navigateToCase row)}}>
            <p>
              {{#if row.shortTitle}}
                {{row.shortTitle}}
              {{else}}
                {{row.title}}
              {{/if}}
            </p>
          </td>
          <td {{on "click" (fn this.navigateToCase row)}}>
            {{moment-format row.created "DD-MM-YYYY HH:mm"}}
          </td>
          <td class="auk-u-text-align--right">
            {{#if this.currentSession.isEditor}}
              <Auk::DropdownMenu @skin="borderless" @icon="three-dots" as |Menu|>
                <Menu.Item {{on "click" (fn this.openEditCaseModal row)}}>
                  {{t "edit-case"}}
                </Menu.Item>
                <Menu.Item
                  {{on
                    "click"
                    (fn
                      (if
                        row.isArchived
                        this.unarchiveCase
                        this.requestArchiveCase
                      )
                      row
                    )
                  }}
                >
                  {{t (if row.isArchived "unarchive-case" "archive-case")}}
                </Menu.Item>
              </Auk::DropdownMenu>
            {{/if}}
            <Auk::Button
              @skin="borderless"
              @layout="icon-only"
              @icon="chevron-right"
              @route="cases.case.subcases"
              @model={{row.id}}
            />
          </td>
        </c.body>
        {{! template-lint-enable no-invalid-interactive }}
      </table.content>
    </DataTable>
  </div>
</div>
{{#if this.showEditCaseModal}}
  <Cases::EditCase
    @onClose={{this.closeEditCaseModal}}
    @onSave={{this.saveEditCase}}
    @case={{this.caseToEdit}}
  />
{{/if}}
{{#if this.isArchivingCase}}
  <WebComponents::VlModalVerify
    @title={{t "archive-case"}}
    @message={{t "archive-case-message"}}
    @cancel={{this.cancelArchiveCase}}
    @verify={{this.archiveCase}}
  />
{{/if}}