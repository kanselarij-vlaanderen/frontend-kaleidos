{{page-title (t "cases")}}
{{cases/cases-header isAddingCase=isAddingCase close=(action "close")}}
<div class="auk-scroll-wrapper__body">
  <div class="auk-u-m-8">
    <Auk::Toolbar>
      <Auk::Toolbar::Group @position="right">
        {{#if this.currentSession.isEditor}}
          <Auk::Toolbar::Item class="auk-o-flex auk-o-flex--vertical-center">
            <Auk::Label class="auk-u-text-nowrap auk-u-mr-2 auk-u-p-0" for="isArchived">{{t "show-archived"}}</Auk::Label>
            {{web-components/vl-toggle value=this.showArchived}}
          </Auk::Toolbar::Item>
        {{/if}}
      </Auk::Toolbar::Group>
    </Auk::Toolbar>
    {{#data-table
      data-test-route-cases-overview-data-table=true
      content=(await model)
      page=page
      noDataMessage=(t "no-results-found")
      size=size
      sort=sort
      class="auk-table auk-table--striped"
      isLoading=isLoadingModel
    as |table|
    }}
      {{#table.content as |c|}}
        {{#c.header}}
          <th class="auk-table__col--9 auk-table__header-title">
            {{t "case-name"}}
          </th>
          {{th-sortable
            class="auk-table__col--1 auk-table__header-title"
            currentSorting=this.sort
            field="created"
            label=(t "created-on")
          }}
          <th class="auk-table__col--1"></th>
        {{/c.header}}
        {{#c.body class="auk-table--interaction-cursor" as |row|}}
          <td onclick={{action "navigateToCase" row}}>
            <p>
              {{#if row.shortTitle}}
                {{row.shortTitle}}
              {{else}}
                {{row.title}}
              {{/if}}
            </p>
          </td>
          <td onclick={{action "navigateToCase" row}}>
            {{moment-format row.created "DD-MM-YYYY HH:mm"}}
          </td>
          <td class="auk-u-text-align--right">
            {{#if currentSession.isEditor}}
              <DropdownMenu
                @skin="borderless"
                @icon="more"
              as |Menu|>
                <Menu.Item {{on "click" (fn this.openEditCaseModal row)}}>
                  {{t "edit-case"}}
                </Menu.Item>
                <Menu.Item {{action (if row.isArchived "unarchiveCase" "requestArchiveCase") row}}>
                  {{t (if row.isArchived "unarchive-case" "archive-case")}}
                </Menu.Item>
              </DropdownMenu>
            {{/if}}
            <Auk::Button
              @skin="borderless"
              @layout="icon-only"
              @icon="nav-right"
              @route="cases.case.subcases"
              @model={{row.id}}
            />
          </td>
        {{/c.body}}
      {{/table.content}}
    {{/data-table}}
  </div>
</div>
{{#if this.showEditCaseModal}}
  <Cases::EditCase
          @onClose={{this.closeEditCaseModal}}
          @onSave={{this.saveEditCase}}
          @editConfidential={{false}}
          @case={{this.caseToEdit}}
  />
{{/if}}
{{#if isArchivingCase}}
  {{web-components/vl-modal-verify
    title=(t "archive-case")
    message=(t "archive-case-message")
    cancel=(action "cancelArchiveCase")
    verify=(action "archiveCase")
  }}
{{/if}}