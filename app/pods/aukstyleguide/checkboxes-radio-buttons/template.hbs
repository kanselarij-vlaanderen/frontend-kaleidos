<StyleguideSample
        @title="Checkbox"
        @snippet="checkbox-default.hbs">
  {{!-- BEGIN-SNIPPET checkbox-default --}}
  <fieldset>
    <legend class="auk-label">Label</legend>
    <WebComponents::AuCheckboxList>
      <WebComponents::AuCheckbox @label="Label 1" @checked />
      <WebComponents::AuCheckbox @label="Label 2" @checked />
      <WebComponents::AuCheckbox @label="Label 3" />
    </WebComponents::AuCheckboxList>
  </fieldset>
  {{!-- END-SNIPPET --}}
</StyleguideSample>

