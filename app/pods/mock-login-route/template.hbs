{{!-- template-lint-disable no-bare-strings --}}
<WebComponents::AuNavbar @border="bottom" @skin="white" @noPadding="true" id="c-main-nav">
  <WebComponents::AuToolbar>
    <WebComponents::AuToolbar::Group @position="left">
      <WebComponents::AuToolbar::Item>
        <WebComponents::AuBrand @logotype="Kaleidos"/>
      </WebComponents::AuToolbar::Item>
    </WebComponents::AuToolbar::Group>
    <WebComponents::AuToolbar::Group @position="right">
      {{#if this.showEnvironmentName}}
        <WebComponents::AuToolbar::Item class="auk-u-mr-3" >
          <div class="vlc-environment-pill {{this.environmentClass}}">
            {{this.environmentName}}
          </div>
        </WebComponents::AuToolbar::Item>
      {{/if}}
      <WebComponents::AuToolbar::Item>
        <WebComponents::AuButtonLink
          @skin="muted"
          @padded="padded"
          @icon="circle-question">
          {{t "help"}}
        </WebComponents::AuButtonLink>
        <AttachPopover
          @renderInPlace={{true}}
          @class="ember-attacher-popper"
          @hideOn="clickout click"
          @showOn="click"
          @animation="shift"
          @placement="bottom-end"
        >
          <WebComponents::AuDropdown>
            <WebComponents::AuDropdown::Item
              @route="manual"
              target="_blank">
              {{t "look-at-documentation"}}
            </WebComponents::AuDropdown::Item>
            <WebComponents::AuDropdown::Item @href="mailto:kaleidos.servicedesk@vlaanderen.be">
              <div>
                <span>{{t "contact-us"}}</span>
                <span class="auk-u-muted auk-u-text-small">{{t "email-servicedesk"}}</span>
              </div>
            </WebComponents::AuDropdown::Item>
          </WebComponents::AuDropdown>
        </AttachPopover>
      </WebComponents::AuToolbar::Item>
    </WebComponents::AuToolbar::Group>
  </WebComponents::AuToolbar>
</WebComponents::AuNavbar>
<div class="auk-scroll-wrapper">
  <div class="auk-scroll-wrapper__body">
    <div class="auk-u-p-4">
      <div class="auk-content" style="max-width: 45rem; width: 100%; margin: 0 auto;">
        <div class="auk-u-my-4">
          <h4 class="auk-u-mb-2">Aanmelden als bepaald profiel (generiek)</h4>
          <p class="auk-u-mb-4">Kies een type gebruiker om mee aan te melden:</p>
          <div class="auk-panel auk-u-mb-8">
            <MockLogin as |login|>
              {{#if this.model.length}}
                <ul class="auk-list auk-list--view">
                  <login.each-account @accounts={{this.model}} as |account|>
                    <li class="auk-list__item">
                      <div class="auk-u-mx-2">
                        <span>{{account.user.firstName}} {{account.user.lastName}}</span>
                      </div>
                      <div class="auk-button auk-button--borderless auk-button--icon">
                        <span class="auk-button__content">
                          <div class="auk-icon auk-icon--default auk-icon--chevron-right ">
                            <i class="ki ki-chevron-right"></i>
                          </div>
                          <div class="auk-u-sr-only">Detail</div>
                        </span>
                      </div>
                    </li>
                  </login.each-account>
                </ul>
              {{else}}
                Geen accounts gevonden.
              {{/if}}
            </MockLogin>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
