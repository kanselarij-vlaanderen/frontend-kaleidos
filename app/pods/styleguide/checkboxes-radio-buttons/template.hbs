<ComponentPageIntro @title="Checkboxes/radio buttons" />

<StyleguideSample
        @title="Checkbox"
        @snippet="checkbox-default.hbs">
  {{!-- BEGIN-SNIPPET checkbox-default --}}
  <fieldset>
    <legend class="auk-label">Label</legend>
    <Auk::CheckboxList>
      <Auk::Checkbox @label="Label 1" @checked={{true}} />
      <Auk::Checkbox @label="Label 2" @checked={{true}} />
      <Auk::Checkbox @label="Label 3" />
    </Auk::CheckboxList>
  </fieldset>
  {{!-- END-SNIPPET --}}
</StyleguideSample>

<StyleguideSample
        @title="Checkbox inline"
        @snippet="checkbox-inline.hbs">
  {{!-- BEGIN-SNIPPET checkbox-inline --}}
  <fieldset>
    <legend class="auk-label">Label</legend>
    <Auk::CheckboxList @layout="inline">
      <Auk::Checkbox @label="Label 1" @checked={{true}} />
      <Auk::Checkbox @label="Label 2" @checked={{true}} />
      <Auk::Checkbox @label="Label 3" />
    </Auk::CheckboxList>
  </fieldset>
  {{!-- END-SNIPPET --}}
</StyleguideSample>

<StyleguideSample
        @title="Radio button"
        @snippet="radio-default.hbs">
  {{!-- BEGIN-SNIPPET radio-default --}}
  <fieldset>
    <legend class="auk-label">Label</legend>
    <Auk::RadioList as |List|>
      <List.Radio @label="Label 1" checked />
      <List.Radio @label="Label 2" />
      <List.Radio @label="Label 3" />
    </Auk::RadioList>
  </fieldset>
  {{!-- END-SNIPPET --}}
</StyleguideSample>

<StyleguideSample
        @title="Radio button inline"
        @snippet="radio-inline.hbs">
  {{!-- BEGIN-SNIPPET radio-inline --}}
  <fieldset>
    <legend class="auk-label">Label</legend>
    <Auk::RadioList @layout="inline" as |List|>
      <List.Radio @label="Label 1" checked />
      <List.Radio @label="Label 2" />
      <List.Radio @label="Label 3" />
    </Auk::RadioList>
  </fieldset>
  {{!-- END-SNIPPET --}}
</StyleguideSample>