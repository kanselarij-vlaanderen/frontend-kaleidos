<StyleguideSample
        @title="Data table with action"
        @snippet="data-table-with-action.hbs"
        @description="Note the `auk-table--striped` class."
>
  {{!-- BEGIN-SNIPPET data-table-with-action --}}
  <table class="auk-table auk-table--striped">
    <thead>
    <tr>
      <th>Header</th>
      <th>Header</th>
      <th>Header</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    {{#each (array 1 2 3) as |item|}}
      <tr>
        <td>Data punt</td>
        <td>Data punt</td>
        <td>Data punt</td>
        <td>
          <WebComponents::AuButtonToolbar>
            <Auk::Button @skin="borderless" @layout="icon-only" id={{@index}} @icon="more">Acties</Auk::Button>

            <EmberPopover @side="bottom-start" @tooltipClass="auk-popover" @targetId={{@index}} as |popover|>
              <Auk::Menu>
                <Auk::Menu::Item @route="styleguide.table">Actie</Auk::Menu::Item>
                <Auk::Menu::Item @route="styleguide.table">Actie</Auk::Menu::Item>
                <Auk::Menu::Item @route="styleguide.table">Actie</Auk::Menu::Item>
              </Auk::Menu>
            </EmberPopover>
          </WebComponents::AuButtonToolbar>
        </td>
      </tr>
    {{/each}}
    </tbody>
  </table>
  {{!-- END-SNIPPET --}}
</StyleguideSample>

