<StyleguideSample
        @title="Data table with action"
        @snippet="data-table-with-action.hbs"
        @description="Note the `auk-table--striped` class."
>
  {{!-- BEGIN-SNIPPET data-table-with-action --}}
  <table class="auk-table auk-table--striped">
    <thead>
    <tr>
      <th>Header</th>
      <th>Header</th>
      <th>Header</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    {{#each (array 1 2 3) as |item|}}
      <tr>
        <td>Data punt</td>
        <td>Data punt</td>
        <td>Data punt</td>
        <td>
          <WebComponents::AuButtonToolbar>
            <Auk::DropdownMenu
              @skin="borderless"
              @layout="icon-only"
              @icon="three-dots"
              @label="Acties"
              @placement="bottom-end"
            as |Menu|>
              <Menu.Item @route="styleguide.table">Actie</Menu.Item>
              <Menu.Item @route="styleguide.table">Actie</Menu.Item>
              <Menu.Item @route="styleguide.table">Actie</Menu.Item>
            </Auk::DropdownMenu>
          </WebComponents::AuButtonToolbar>
        </td>
      </tr>
    {{/each}}
    </tbody>
  </table>
  {{!-- END-SNIPPET --}}
</StyleguideSample>

