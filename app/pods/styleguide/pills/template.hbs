{{! template-lint-disable no-bare-strings }}

<h1 class="vlc-kitchensink-header">Pills</h1>
<h4 class="vlc-kitchensink-header">Currently used:</h4>
<Styleguide::KitchensinkSample
  @title="Normal pills"
  @snippet="normal.hbs"
>
  {{!-- BEGIN-SNIPPET normal --}}
  <span class="vl-pill">Option 1</span>
  <span class="vlc-pill">Option 1</span>
  <span class="vlc-pill vlc-pill--success">Option 1</span>
  <span class="vlc-pill vlc-pill--warning">Option 1</span>
  <span class="vlc-pill vlc-pill--error">Option 1</span>
  {{!-- END-SNIPPET --}}
</Styleguide::KitchensinkSample>

<Styleguide::KitchensinkSample
  @title="Acceslevel pill"
  @snippet="acceslevel.hbs"
>
  {{!-- BEGIN-SNIPPET acceslevel --}}
  <AccessLevelPill/>
  {{!-- END-SNIPPET --}}
</Styleguide::KitchensinkSample>
<hr>
<h4 class="vlc-kitchensink-header">New Pill:</h4>
<Styleguide::KitchensinkSample
        @title="Warning"
        @code='<WebComponents::AuPill @skin="warning">Label</WebComponents::AuPill>'
>
  {{!-- BEGIN-SNIPPET acceslevel --}}
  <WebComponents::AuPill @skin="warning">Label</WebComponents::AuPill>
  {{!-- END-SNIPPET --}}
</Styleguide::KitchensinkSample>

<Styleguide::KitchensinkSample
        @title="Succes pill list"
        @code='<WebComponents::AuPillList>
  <WebComponents::AuPill @skin="success">Label</WebComponents::AuPill>
  <WebComponents::AuPill @skin="success" @icon="lock-open">Label</WebComponents::AuPill>
</WebComponents::AuPillList>'
>
  {{!-- BEGIN-SNIPPET acceslevel --}}
  <WebComponents::AuPillList>
    <WebComponents::AuPill @skin="success">Label</WebComponents::AuPill>
    <WebComponents::AuPill @skin="success" @icon="lock-open">Label</WebComponents::AuPill>
  </WebComponents::AuPillList>
  {{!-- END-SNIPPET --}}
</Styleguide::KitchensinkSample>

<Styleguide::KitchensinkSample
        @title="Danger pill list"
        @code='<WebComponents::AuPillList>
  <WebComponents::AuPill @skin="danger">Label</WebComponents::AuPill>
  <WebComponents::AuPill @skin="danger" @layout="icon-only" @icon="lock-closed"/>
  <WebComponents::AuPill @skin="danger" @layout="icon-right" @icon="lock-closed">Label</WebComponents::AuPill>
</WebComponents::AuPillList>'
>
  {{!-- BEGIN-SNIPPET acceslevel --}}
  <WebComponents::AuPillList>
    <WebComponents::AuPill @skin="danger">Label</WebComponents::AuPill>
    <WebComponents::AuPill @skin="danger" @layout="icon-only" @icon="lock-closed"/>
    <WebComponents::AuPill @skin="danger" @layout="icon-right" @icon="lock-closed">Label</WebComponents::AuPill>
  </WebComponents::AuPillList>
  {{!-- END-SNIPPET --}}
</Styleguide::KitchensinkSample>



<Styleguide::KitchensinkSample
        @title="In Progress"
        @code='<WebComponents::AuStatusPill>2/4</WebComponents::AuStatusPill>'
>
  <WebComponents::AuStatusPill>2/4</WebComponents::AuStatusPill>
</Styleguide::KitchensinkSample>

<Styleguide::KitchensinkSample
        @title="Not started"
        @code='<WebComponents::AuStatusPill @status="not-started">0/4</WebComponents::AuStatusPill>'
>
  <WebComponents::AuStatusPill @status="not-started">0/4</WebComponents::AuStatusPill>
</Styleguide::KitchensinkSample>

<Styleguide::KitchensinkSample
        @title="Done"
        @code='<WebComponents::AuStatusPill @status="done">4/4</WebComponents::AuStatusPill>'
>
  <WebComponents::AuStatusPill @status="done">4/4</WebComponents::AuStatusPill>
</Styleguide::KitchensinkSample>

<table class="auk-table">
  <thead>
    <tr>
      <th>Argument</th>
      <th>Type</th>
      <th>Possible values</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>@status</td>
      <td>string</td>
      <td><code>in-progress</code>, <code>not-started</code>, <code>done</code></td>
      <td>Determines the status of the pill. Unless specified, the default skin is set to in-progress.</td>
    </tr>
  </tbody>
</table>