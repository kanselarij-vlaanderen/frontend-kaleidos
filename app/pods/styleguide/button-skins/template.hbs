<ComponentPageIntro
        @title="Button skins"
>
  <p>This page documents the different button skins. For the different types, see <a href="/styleguide/button-types">types</a>.</p>
</ComponentPageIntro>

<StyleguideSample
        @title="Primary button"
        @description="Please use maximum 1 primary button per screen."
        @snippet="button-skin-primary.hbs"
>
  {{!-- BEGIN-SNIPPET button-skin-primary --}}
  <Auk::Button @skin="primary">Button text</Auk::Button>
  <Auk::Button @skin="primary" @disabled={{true}}>Button text</Auk::Button>
  {{!-- END-SNIPPET --}}
</StyleguideSample>

