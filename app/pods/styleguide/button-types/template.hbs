<ComponentPageIntro @title="Button (types)">
  <p>These are variants of button types using <code>Button</code>. For link buttons, see <a href="/styleguide/link-button">this page</a>.</p>
</ComponentPageIntro>

<StyleguideSample
        @title="Label"
        @snippet="button.hbs"
>
  {{!-- BEGIN-SNIPPET button --}}
  <Auk::Button>Button text</Auk::Button>
  {{!-- END-SNIPPET --}}
</StyleguideSample>

<StyleguideSample
        @title="Icon + Label"
        @snippet="button-type-icon-label.hbs"
>
  {{!-- BEGIN-SNIPPET button-type-icon-label --}}
  <Auk::Button @icon="plus">Add item</Auk::Button>
  {{!-- END-SNIPPET --}}
</StyleguideSample>

<StyleguideSample
        @title="Icon only"
        @snippet="button-type-icon-only.hbs"
>
  {{!-- BEGIN-SNIPPET button-type-icon-only --}}
  <Auk::Button @icon="plus" @layout="icon-only">Toevoegen</Auk::Button>
  {{!-- END-SNIPPET --}}
</StyleguideSample>

<StyleguideSample
        @title="Icon right"
        @snippet="button-type-icon-right.hbs"
>
  {{!-- BEGIN-SNIPPET button-type-icon-right --}}
  <Auk::Button @icon="chevron-down" @layout="icon-right">Acties</Auk::Button>
  {{!-- END-SNIPPET --}}
</StyleguideSample>

<StyleguideSample
        @title="Block"
        @snippet="button-type-block.hbs"
>
  {{!-- BEGIN-SNIPPET button-type-block --}}
  <Auk::Button @block="true" @icon="chevron-down" @layout="icon-right">Acties</Auk::Button>
  {{!-- END-SNIPPET --}}
</StyleguideSample>


