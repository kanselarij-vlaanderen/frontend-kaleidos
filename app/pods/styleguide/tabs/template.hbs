<StyleguideSample
        @title="Reversed tabs"
        @snippet="tabs-reversed.hbs"
>
  {{!-- BEGIN-SNIPPET tabs-reversed --}}
  <Auk::Tabs @reversed={{true}} as |Tabs|>
    <Tabs.Tab @route="styleguide.colors">Nav Item</Tabs.Tab>
    <Tabs.Tab @route="styleguide.tabs">Nav Item</Tabs.Tab>
    <Tabs.Tab @route="styleguide.colors">Nav Item</Tabs.Tab>
    <Tabs.Tab @route="styleguide.colors">Nav Item</Tabs.Tab>
  </Auk::Tabs>
  {{!-- END-SNIPPET tabs-reversed --}}
</StyleguideSample>

<StyleguideSample
        @title="Tabs with icon"
        @snippet="tabs-icon.hbs"
>
  {{!-- BEGIN-SNIPPET tabs-icon --}}
  <Auk::Tabs as |Tabs|>
    <Tabs.Tab @route="styleguide.colors" @icon="search">Nav Item</Tabs.Tab>
    <Tabs.Tab @route="styleguide.tabs" @icon="search">Nav Item</Tabs.Tab>
  </Auk::Tabs>
  {{!-- END-SNIPPET --}}
</StyleguideSample>

<StyleguideSample
        @title="Tabs icon right"
        @snippet="tabs-icon-right.hbs"
>
  {{!-- BEGIN-SNIPPET tabs-icon-right --}}
  <Auk::Tabs as |Tabs|>
    <Tabs.Tab @route="styleguide.tabs" @icon="search" @layout="icon-right">Nav Item</Tabs.Tab>
    <Tabs.Tab @route="styleguide.colors" @icon="search" @layout="icon-right">Nav Item</Tabs.Tab>
  </Auk::Tabs>
  {{!-- END-SNIPPET --}}
</StyleguideSample>

<StyleguideSample
        @title="Tabs counter"
        @snippet="tabs-counter.hbs"
>
  {{!-- BEGIN-SNIPPET tabs-counter --}}
  <Auk::Tabs as |Tabs|>
    <Tabs.Tab @route="styleguide.colors" @counter="3">Nav Item</Tabs.Tab>
    <Tabs.Tab @route="styleguide.tabs" @counter="12">Nav Item</Tabs.Tab>
    <Tabs.Tab @route="styleguide.colors">Nav Item</Tabs.Tab>
    <Tabs.Tab @route="styleguide.colors">Nav Item</Tabs.Tab>
  </Auk::Tabs>
  {{!-- END-SNIPPET --}}
</StyleguideSample>

