      <Auk::Toolbar::Group @position="left">
        <Auk::Toolbar::Item>
          <div class="o-flex o-flex--vertical auk-u-mt-2">
            <div class="o-flex o-flex--vertical-center">
              <h4 class="auk-toolbar-complex__title">Agenda van 12 juni 2020 om 10:00</h4>
              <span class="auk-u-muted auk-body-1 ">- Ministerraad</span>
            </div>
            <Auk::Tabs @reversed={{true}}>
              <Auk::Tab @route="styleguide.accordion" @isHierarchicalBack={{true}}/>
              <Auk::Tab @route="styleguide.accordion">Overzicht</Auk::Tab>
              <Auk::Tab @route="styleguide.accordion">Detail</Auk::Tab>
              <Auk::Tab @route="styleguide.accordion">Vergelijk</Auk::Tab>
              <Auk::Tab @route="styleguide.accordion">Documenten</Auk::Tab>
            </Auk::Tabs>
          </div>
        </Auk::Toolbar::Item>
      </Auk::Toolbar::Group>
      <Auk::Toolbar::Group @position="right">
        <Auk::Toolbar::Item>
          <Auk::Button @skin="primary">Ontwerpagenda goedkeuren</Auk::Button>
        </Auk::Toolbar::Item>
        <Auk::Toolbar::Item>
          <Auk::Button @icon="chevron-down" @layout="icon-right" id="toolbar-complex-dropdown" aria-haspopup="true" aria-controls="toolbar-complex-actions">Acties</Auk::Button>
          <EmberPopover @side="bottom-start" @tooltipClass="auk-popover" @targetId="toolbar-complex-dropdown" as |popover|>
            <Auk::Dropdown id="toolbar-complex-actions" aria-labelledby="toolbar-">
              <Auk::Dropdown::Item>Action item</Auk::Dropdown::Item>
              <Auk::Dropdown::Item>Action item</Auk::Dropdown::Item>
              <Auk::Dropdown::Item>Action item</Auk::Dropdown::Item>
            </Auk::Dropdown>
          </EmberPopover>
        </Auk::Toolbar::Item>
      </Auk::Toolbar::Group>
    </Auk::Toolbar>
  </Auk::Navbar>
  {{!-- END-SNIPPET --}}
</StyleguideSample>

