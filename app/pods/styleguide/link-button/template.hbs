<ComponentPageIntro @title="Button (link)">
  <p>These are variants of button types using <code>ButtonLink</code>. For regular buttons, see <a href="/styleguide/button-types">this page</a>.</p>
</ComponentPageIntro>

<StyleguideSample
  @title="Button Link"
  @snippet="link-button.hbs"
>
  {{!-- BEGIN-SNIPPET link-button --}}
  <Auk::ButtonLink @route="styleguide.link-button" @model={{@model}}>Link button</Auk::ButtonLink>
  {{!-- END-SNIPPET --}}
</StyleguideSample>

<StyleguideSample
  @title="Button link muted"
  @snippet="link-button-muted.hbs"
>

  {{!-- BEGIN-SNIPPET link-button-muted --}}
  <Auk::ButtonLink @route="styleguide.link-button" @skin="muted" @model={{@model}}>Link button muted</Auk::ButtonLink>
  {{!-- END-SNIPPET --}}

</StyleguideSample>

<StyleguideSample
  @title="Button link muted (with icon left)"
  @snippet="link-button-muted-icon.hbs"
>
  {{!-- BEGIN-SNIPPET link-button-muted-icon --}}
  <Auk::ButtonLink @route="styleguide.link-button" @skin="muted" @icon="plus" @model={{@model}}>Link button muted</Auk::ButtonLink>
  {{!-- END-SNIPPET --}}

</StyleguideSample>

<StyleguideSample
  @title="Button link muted (with icon right)"
  @snippet="link-button-muted-icon-right.hbs"
>
  {{!-- BEGIN-SNIPPET link-button-muted-icon-right --}}
  <Auk::ButtonLink @route="styleguide.link-button" @skin="muted" @icon="plus" @layout="icon-right" @model={{@model}}>Link button muted</Auk::ButtonLink>
  {{!-- END-SNIPPET --}}

</StyleguideSample>

