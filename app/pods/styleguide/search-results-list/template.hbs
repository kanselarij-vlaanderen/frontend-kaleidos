    <Auk::Input @icon="search" type="text" />
    <Auk::SearchResultsList>
      <Auk::SearchResultsList::Item @route="styleguide.accordion" @skin="multiline">
        Accordion
      </Auk::SearchResultsList::Item>
      <Auk::SearchResultsList::Item @route="styleguide.accordion-panel">
        Accordion panel
      </Auk::SearchResultsList::Item>
      <Auk::SearchResultsList::Item @route="styleguide.avatar">
        Avatar
      </Auk::SearchResultsList::Item>
      <Auk::SearchResultsList::Item @route="styleguide.badge">
        Badge
      </Auk::SearchResultsList::Item>
      <Auk::SearchResultsList::Item @route="styleguide.brand">
        Brand
      </Auk::SearchResultsList::Item>
      <Auk::SearchResultsList::Item @route="styleguide.checkboxes-radio-buttons">
        Checkboxes/radio buttons
      </Auk::SearchResultsList::Item>
      <Auk::SearchResultsList::Item @route="styleguide.color-badge">
        Color badge
      </Auk::SearchResultsList::Item>
      <Auk::SearchResultsList::Item @route="styleguide.empty-state">
        Empty state
      </Auk::SearchResultsList::Item>
    </Auk::SearchResultsList>
  </div>
  {{!-- END-SNIPPET --}}
</StyleguideSample>

<StyleguideSample
  @title="Multi-line & position (right)"
  @snippet="search-results-list-multiline-and-position.hbs"
  @modifier="dropdown"
  @align="end"
>
  {{!-- BEGIN-SNIPPET search-results-list-multiline-and-position --}}
