      </Auk::SearchResultsList::Item>
      <Auk::SearchResultsList::Item @route="styleguide.accordion-panel" @skin="multiline">
        <:default>Accordion panel</:default>
        <:subline>1ste datapunt</:subline>
      </Auk::SearchResultsList::Item>
      <Auk::SearchResultsList::Item @route="styleguide.avatar" @skin="multiline">
        <:default>Avatar</:default>
        <:subline>3de datapunt</:subline>
      </Auk::SearchResultsList::Item>
      <Auk::SearchResultsList::Item @route="styleguide.badge" @skin="multiline">
        <:default>Badge</:default>
        <:subline>2de datapunt</:subline>
      </Auk::SearchResultsList::Item>
    </Auk::SearchResultsList>
  </div>
  {{!-- END-SNIPPET --}}
</StyleguideSample>

<StyleguideSample
  @title="Loading state"
  @snippet="search-results-list-loading.hbs"
  @modifier="dropdown"
>
  {{!-- BEGIN-SNIPPET search-results-list-loading --}}
