<div class="vlc-u-flex-space-between">
  <button
    type="button"
    class="vl-button vl-button--link vl-button--icon"
    {{on "click" @onEdit}}
  >
    <i class="vl-button__icon ki-pencil"></i>
  </button>
  {{#if (is-pending (await @agendaitem.nota))}}
    <div class="vl-loader" role="alert" aria-busy="true">
      {{#attach-tooltip
        arrow="true"
        animation="shift"
        placement="bottom"
        class="ember-attacher-tooltip"
      }}
        {{t "nota-loading-text"}}
      {{/attach-tooltip}}
    </div>
  {{else}}
    <button
      type="button"
      class="vl-button vl-button--link vl-button--icon"
      disabled={{not (await @agendaitem.nota)}}
      style={{if (not (await @agendaitem.nota)) "opacity:0.3;"}}
      {{on "click" this.openNota}}
    >
      <i class="vl-button__icon ki-document"></i>
      {{#attach-tooltip
        arrow="true"
        animation="shift"
        placement="bottom"
        class="ember-attacher-tooltip"
      }}
        {{if (await @agendaitem.nota) (t "open-note") (t "no-nota")}}
      {{/attach-tooltip}}
    </button>
  {{/if}}
  <LinkTo
    data-test-link-to-subcase-overview
    class="vl-button vl-button--link vl-button--icon"
    target="_blank"
    @route="agenda.agendaitems.agendaitem"
    @models={{array
      (await latestMeetingId)
      (await latestAgendaId)
      (await latestAgendaitemId)
    }}
  >
    <i class="vl-button__icon ki-nav-right"></i>
  </LinkTo>
</div>
