<span class="auk-pill {{this.skin}} {{this.layout}}" ...attributes data-test-au-pill-span>
  {{#if @icon}}
    {{#if (or (not @layout) (eq @layout "icon-left"))}}
      <WebComponents::AuIcon @name={{@icon}}/>
      {{yield}}
    {{/if}}

    {{#if (eq @layout "icon-only")}}
      <WebComponents::AuIcon @name={{@icon}}/>
    {{/if}}

    {{#if (eq @layout "icon-right")}}
      {{yield}}
      <WebComponents::AuIcon @name={{@icon}}/>
    {{/if}}
  {{else}}
    {{yield}}
  {{/if}}
</span>