{{#if (is-pending newsletterInfo)}}
  {{web-components/vl-loader text=(t "newsletter-info-loading-text")}}
{{else if (not isEditing)}}
  {{#if (not allowEditing)}}
    {{#if (await newsletterInfo.inNewsletter)}}
      {{newsletter/newsletter-item/item-content
        allowEditing=allowEditing
        itemIndex=itemIndex
        isEditing=isEditing
        agendaitem=agendaitem
        newsletterInfo=newsletterInfo
      }}
    {{else if agendaitem.showAsRemark}}
      {{newsletter/newsletter-item/item-content
        allowEditing=allowEditing
        definite=definite
        itemIndex=itemIndex
        isEditing=isEditing
        agendaitem=agendaitem
        newsletterInfo=newsletterInfo
      }}
    {{/if}}
  {{else}}
    {{newsletter/newsletter-item/item-content
      allowEditing=allowEditing
      definite=definite
      isEditing=isEditing
      agendaitem=agendaitem
      newsletterInfo=newsletterInfo
    }}
  {{/if}}
{{else}}
  {{news-item/edit-item
    agendaitem=agendaitem
    isLoading=isLoading
    newsletterInfo=newsletterInfo
    isEditing=isEditing
  }}
{{/if}}