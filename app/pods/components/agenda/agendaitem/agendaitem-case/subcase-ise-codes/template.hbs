<div class="auk-u-mb-3" data-test-publication-case-panel-mandatees>
  <WebComponents::AuPanel>
    <WebComponents::AuPanel::Header>
      <WebComponents::AuToolbar>
        <WebComponents::AuToolbar::Group @position="left">
          <WebComponents::AuToolbar::Item>
            <h4 class="auk-panel__title">
              {{t "ise-code"}}
            </h4>
          </WebComponents::AuToolbar::Item>
        </WebComponents::AuToolbar::Group>
      </WebComponents::AuToolbar>
    </WebComponents::AuPanel::Header>
    {{#if (gt (await @item.iseCodes.length) 0) }}
      <WebComponents::AuPanel::Body>
        <WebComponents::AuPillList data-test-subcase-ise-codes-list>
          {{#each (await @item.iseCodes) as |iseCode|}}
            <WebComponents::AuPill data-test-subcase-ise-codes-list-item>
              {{iseCode.name}}
            </WebComponents::AuPill>
          {{/each}}
        </WebComponents::AuPillList>
      </WebComponents::AuPanel::Body>
    {{else}}
      <WebComponents::AuPanel::Body>
        <WebComponents::AuEmptyState @message={{t "no-ise-codes-yet"}}/>
      </WebComponents::AuPanel::Body>
    {{/if}}
  </WebComponents::AuPanel>
</div>