<Auk::Navbar @border="bottom">
  <Auk::Toolbar>
    <Auk::Toolbar::Group @position="left">
      <Auk::Toolbar::Item>
        <Auk::Tabs>
          <Auk::Tab
            data-test-route-publications-publication-translations-documents
            @route="publications.publication.translations.documents">
            {{capitalize (t "documents")}}
          </Auk::Tab>
          <Auk::Tab
            data-test-route-publications-publication-translations-requests
            @route="publications.publication.translations.requests">
            {{capitalize (t "requests")}}
          </Auk::Tab>
        </Auk::Tabs>
      </Auk::Toolbar::Item>
    </Auk::Toolbar::Group>
    <Auk::Toolbar::Group @position="right">
      <Auk::Toolbar::Item>
        <Auk::Checkbox
          data-test-route-publications-publication-translations-finished
          @label={{t "finished"}}
          @checked={{this.model.endDate}}
          {{on "input" this.toggleFinishTranslation}}
        />
      </Auk::Toolbar::Item>
    </Auk::Toolbar::Group>
  </Auk::Toolbar>
</Auk::Navbar>
{{outlet}}