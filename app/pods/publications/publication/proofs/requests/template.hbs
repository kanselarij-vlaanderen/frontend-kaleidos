<div class="auk-u-m-4">
  {{#each this.model as |row|}}
    <div
      data-test-route-publications---proofs-requests-container
      class="auk-u-mb-4"
    >
      <Auk::AccordionPanel @isDefaultActive={{true}} as |accordionPanel|>
        <accordionPanel.Header
          @title={{t
            "x-request-type-x-timestamp"
            request-type=(t row.requestTypeTranslationKey)
            date=(moment-format row.requestActivity.startDate "D MMMM")
            time=(moment-format row.requestActivity.startDate "H:mm")
          }}
          as |header|
        >
          <header.Actions as |actions|>
            <actions.Item>
              {{#if row.canOpenProofUploadModal}}
                <Auk::Button
                  data-test-route-publications---proofs-requests-upload
                  @disabled={{this.isUploadDisabled}}
                  @skin="primary"
                  {{on "click" (fn this.openProofUploadModal row)}}
                >
                  {{t "upload-received-proof-document"}}
                </Auk::Button>
              {{/if}}
            </actions.Item>
          </header.Actions>
        </accordionPanel.Header>
        <accordionPanel.Body>
          <div class="auk-o-grid">
            <div class="auk-o-grid-col-6">
              {{#if row.requestActivity.email}}
                <div class="auk-u-mb-2">
                  <p class="auk-u-text-bold auk-u-muted auk-u-mb">
                    {{t "subject"}}
                  </p>
                  <p
                    data-test-route-publications---proofs-requests-email-subject
                  >{{row.requestActivity.email.subject}}</p>
                </div>
                <div class="auk-u-mb-2">
                  <p class="auk-u-text-bold auk-u-muted auk-u-mb">
                    {{t "message"}}
                  </p>
                  <div class="auk-box">
                    {{! TODO: Remove inline style }}
                    {{! template-lint-disable no-inline-styles }}
                    {{! p-tag opening and closing on 1 line to prevent whitespace to be rendered. }}
                    <p style="white-space:pre-line;">
                      {{row.requestActivity.email.message}}
                    </p>
                    {{! template-lint-enable no-inline-styles }}
                  </div>
                </div>
              {{else}}
                <Auk::EmptyState @message={{t "no-email-available"}} />
              {{/if}}
            </div>
            <div class="auk-o-grid-col-6">
              <div class="auk-u-mb-2">
                <p class="auk-u-text-bold auk-u-muted auk-u-mb">
                  {{t "attachments"}}
                </p>
                <Utils::Documents::List
                  @pieces={{sort-by "created" row.requestActivity.usedPieces}}
                />
              </div>
              {{#if row.proofingActivity.generatedPieces}}
                <div class="auk-u-mb-2">
                  <p class="auk-u-text-bold auk-u-muted auk-u-mb">
                    {{t "received-documents"}}
                  </p>
                  <Utils::Documents::List
                    @pieces={{sort-by
                      "created"
                      row.proofingActivity.generatedPieces
                    }}
                  />
                </div>
              {{/if}}
            </div>
          </div>
        </accordionPanel.Body>
      </Auk::AccordionPanel>
    </div>
  {{else}}
    <Auk::EmptyState
      @message={{t "no-proofing-activities-yet"}}
      @bordered={{true}}
    />
  {{/each}}
</div>

{{#if this.isUploadModalOpen}}
  <Publications::Publication::Proofs::ProofUploadModal
    @publicationFlow={{this.publicationFlow}}
    @isReceived={{true}}
    @onSave={{this.saveProofUpload}}
    @onCancel={{this.closeProofUploadModal}}
  />
{{/if}}