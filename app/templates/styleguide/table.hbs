</StyleguideSample>

<StyleguideSample
        @title="Data table with action"
        @snippet="data-table-with-action.hbs"
        @description="Note the `auk-table--striped` class."
>
  {{!-- BEGIN-SNIPPET data-table-with-action --}}
  <table class="auk-table auk-table--striped">
    <thead>
    <tr>
      <th>Header</th>
      <th>Header</th>
      <th>Header</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    {{#each (array 1 2 3) as |item|}}
      <tr>
        <td>Data punt</td>
        <td>Data punt</td>
        <td>Data punt</td>
        <td>
          <WebComponents::AuButtonToolbar>
            <AuDropdown
              @skin="naked"
              @icon="three-dots"
              @title="Acties"
              @hideText={{true}}
              @alignment="right"
            >
              <AuLink
                @skin="primary"
                @route="styleguide.brand"
                role="menuitem"
              >
                Actie
              </AuLink>
              <AuLink
                @skin="primary"
                @route="styleguide.brand"
                role="menuitem"
              >
                Actie
              </AuLink>
              <AuLink
                @skin="primary"
                @route="styleguide.brand"
                role="menuitem"
              >
                Actie
              </AuLink>
            </AuDropdown>
          </WebComponents::AuButtonToolbar>
        </td>
      </tr>
    {{/each}}
    </tbody>
  </table>
  {{!-- END-SNIPPET --}}
</StyleguideSample>

