<StyleguideSample
        @title="Data table"
        @snippet="data-table.hbs"
>
  {{!-- BEGIN-SNIPPET data-table --}}
  <table class="auk-table">
    <thead>
    <tr>
      <th>Header</th>
      <th>Header</th>
      <th>Header</th>
      <th>Header</th>
    </tr>
    </thead>
    <tbody>
    {{#each (array 1 2 3) as |item|}}
      <tr>
        <td>Data punt</td>
        <td>Data punt</td>
        <td>Data punt</td>
        <td>Data punt</td>
      </tr>
    {{/each}}
    </tbody>
  </table>
  {{!-- END-SNIPPET --}}
</StyleguideSample>

<StyleguideSample
        @title="Data table with action"
        @snippet="data-table-with-action.hbs"
        @description="Note the `auk-table--striped` class."
>
  {{!-- BEGIN-SNIPPET data-table-with-action --}}
  <table class="auk-table auk-table--striped">
    <thead>
    <tr>
      <th>Header</th>
      <th>Header</th>
      <th>Header</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    {{#each (array 1 2 3) as |item|}}
      <tr>
        <td>Data punt</td>
        <td>Data punt</td>
        <td>Data punt</td>
        <td class="auk-u-text-align--right">
          <AuDropdown
            @skin="naked"
            @icon="three-dots"
            @title="Acties"
            @hideText={{true}}
            @alignment="right"
          >
            <AuLink
              @skin="primary"
              @route="styleguide.brand"
              role="menuitem"
            >
              Actie
            </AuLink>
            <AuLink
              @skin="primary"
              @route="styleguide.brand"
              role="menuitem"
            >
              Actie
            </AuLink>
            <AuLink
              @skin="primary"
              @route="styleguide.brand"
              role="menuitem"
            >
              Actie
            </AuLink>
          </AuDropdown>
        </td>
      </tr>
    {{/each}}
    </tbody>
  </table>
  {{!-- END-SNIPPET --}}
</StyleguideSample>

<StyleguideSample
        @title="Data table with 2 actions"
        @snippet="data-table-with-2-actions.hbs">
  {{!-- BEGIN-SNIPPET data-table-with-2-actions --}}
  <table class="auk-table">
    <thead>
    <tr>
      <th>Header</th>
      <th>Header</th>
      <th>Header</th>
      <th></th>

    </tr>
    </thead>
    <tbody>
    {{#each (array 1 2 3) as |item|}}
      <tr>
        <td>Data punt</td>
        <td>Data punt</td>
        <td>Data punt</td>
        <td class="auk-u-text-align--right">
          <Auk::Button @skin="borderless" @icon="pencil" @layout="icon-only" @route="styleguide">Edit item</Auk::Button>
          <Auk::Button @skin="borderless" @icon="trash" @layout="icon-only" @route="styleguide">Delete item</Auk::Button>
        </td>
      </tr>
    {{/each}}
    </tbody>
  </table>
  {{!-- END-SNIPPET --}}
</StyleguideSample>

