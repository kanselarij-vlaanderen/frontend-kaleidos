<ComponentPageIntro @title="Checkbox list" />

<StyleguideSample
        @title="Checkbox"
        @snippet="checkbox-default.hbs">
  {{!-- BEGIN-SNIPPET checkbox-default --}}
  <AuFieldset as |Fieldset|>
    <Fieldset.legend>Label</Fieldset.legend>
    <Fieldset.content>
      <Auk::CheckboxList>
        <AuControlCheckbox @label="Label 1" @checked={{true}} />
        <AuControlCheckbox @label="Label 2" @checked={{true}} />
        <AuControlCheckbox @label="Label 3" />
        <AuControlCheckbox @label="Label 4" @disabled={{true}} @checked={{true}} />
        <AuControlCheckbox @label="Label 5" @disabled={{true}} />
        <AuControlCheckbox @label="Label 6" @indeterminate={{true}} />
        <AuControlCheckbox @label="Label 7" @disabled={{true}} @indeterminate={{true}} />
      </Auk::CheckboxList>
    </Fieldset.content>
  </AuFieldset>
  {{!-- END-SNIPPET --}}
</StyleguideSample>

