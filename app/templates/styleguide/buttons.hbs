<h1 class="vlc-kitchensink__header">Buttons</h1>
<div class="vlc-kitchensink__sample">
  <h2>Narrow buttons</h2>
  <div class="vlc-kitchensink__sample--nested">
    <button class="vl-button vl-button--narrow" type="button">Primary button</button>
    <button class="vl-button vl-button--secondary vl-button--narrow" type="button">Secondary button</button>
    <button class="vl-button vl-button--tertiary vl-button--narrow" type="button">Tertiary button</button>
  </div>

  <h2>Wide buttons</h2>
  <div class="vlc-kitchensink__sample--nested">
    <button class="vl-button vl-button--wide" type="button">Primary button</button>
    <button class="vl-button vl-button--secondary vl-button--wide" type="button">Secondary button</button>
    <button class="vl-button vl-button--tertiary vl-button--wide" type="button">Tertiary button</button>
  </div>

  <h2>Buttons</h2>
  <div class="vlc-kitchensink__sample--nested">
    <button class="vl-button vl-button--disabled" type="button">Disabled button</button>
    <button class="vl-button vl-button--error " type="button">Error button</button>
    <button class="vl-button vl-button--reset " type="button">Reset button</button>
    <button class="vl-button vl-button--block" type="button">Block button</button>
  </div>

  <h2>Icon buttons</h2>
  <div class="vlc-kitchensink__sample--nested">
    <button type="button" class="vl-button  vl-button--icon">
      <i class="vl-vi vl-vi-cross vl-button__icon" aria-hidden="true"></i>
    </button>
    <button type="button" class="vl-button  vl-button--icon vl-button-icon--error">
      <i class="vl-vi vl-vi-cross vl-button__icon" aria-hidden="true"></i>
    </button>
  </div>

  <h2>Link buttons</h2>
  <div class="vlc-kitchensink__sample--nested">
    <button type="button" class="vl-button vl-button--link">Link button</button>
    <button type="button" class="vl-button vl-button--link-muted">Link muted button</button>
  </div>
  <h2>Toggle button</h2>
  <div class="vlc-kitchensink__sample--nested">
    <WebComponents::VlToggle />
  </div>
</div>
