<AuModal
  @modalOpen={{true}}
  @closeModal={{this.cancel}}
>
  <:title>
    {{t "manage-alerts"}}
  </:title>
  <:body>
    <div data-test-route-settings-system-alerts-index-alerts-dropdown class="auk-form-group">
      <PowerSelect
        @options={{@model}}
        @selected={{this.selectedAlert}}
        @onChange={{this.selectAlert}}
        as |alert|
      >
        {{alert.title}}
      </PowerSelect>
    </div>
  </:body>
  <:footer>
    <Auk::Toolbar @size="large">
      <Auk::Toolbar::Group @position="left">
        <Auk::Toolbar::Item>
          <AuLink
            @skin="button-naked"
            @route="settings"
          >
            {{t "cancel"}}
          </AuLink>
        </Auk::Toolbar::Item>
      </Auk::Toolbar::Group>
      <Auk::Toolbar::Group @position="right">
        <Auk::Toolbar::Item>
          {{#if this.selectedAlert}}
            <AuLink
              @skin="button-secondary"
              @icon="pencil"
              @route="settings.system-alerts.edit"
              @model={{this.selectedAlert.id}}
            >
              {{t "edit"}}
            </AuLink>
            <AuButton
              data-test-route-settings-system-alerts-index-remove
              @skin="secondary"
              @alert={{true}}
              @icon="trash"
              {{on "click" (perform this.remove this.selectedAlert)}}
            >
              {{t "delete"}}
            </AuButton>
          {{/if}}
          <AuLink
            data-test-route-settings-system-alerts-index-add
            @skin="button"
            @icon="plus"
            @route="settings.system-alerts.new"
            class="auk-u-ml-2"
          >
            {{t "add"}}
          </AuLink>
        </Auk::Toolbar::Item>
      </Auk::Toolbar::Group>
    </Auk::Toolbar>
  </:footer>
</AuModal>