<ConfirmationModal
  @modalOpen={{true}}
  @title={{t "manage-alerts"}}
  @onConfirm={{perform this.save this.model}}
  @onCancel={{this.cancel}}
  @confirmMessage={{t "save"}}
  @loading={{this.save.isRunning}}
>
  <:body>
    <Utils::SystemAlertForm
      @alert={{@model}}
      @onCancel={{this.cancel}}
    />
  </:body>
</ConfirmationModal>