<div class="vl-u-display-flex vlc-u-flex-space-between">
  <h3 class="vl-title vl-title--h3">
    {{t "decision-title"}}
  </h3>
</div>
{{#if this.currentSession.isEditor}}
  <div class="vl-action-group">
    <button
      type="button"
      class="vl-button vl-button--secondary vl-button--narrow vl-button--icon-before"
      data-test-add-decision
      {{on "click" this.addDecision}}
    >
      <i class="vl-button__icon vl-button__icon--before vl-vi vl-vi-add"></i>
      {{t "add-decision"}}
    </button>
  </div>
{{/if}}
{{#each this.model as |decision|}}
  <Agenda::Agendaitem::AgendaitemDecision
    @subcase={{this.subcase}}
    @decision={{decision}}
    @agendaitem={{this.agendaItem}}
  />
{{/each}}