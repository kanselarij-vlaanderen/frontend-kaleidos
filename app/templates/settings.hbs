{{page-title (t "settings")}}

<div class="auk-u-maximize-height auk-scroll-wrapper">
  <Auk::Navbar @skin="gray-100">
    <Auk::Toolbar>
      <Auk::Toolbar::Group @position="left">
        <Auk::Toolbar::Item>
          <Auk::Tabs @responsive={{true}} @responsiveBreakpoint="small">
            <Auk::Tab
              @route="settings.index"
              data-test-route-settings-general-settings
            >
              {{t "general-settings"}}
            </Auk::Tab>
            <Auk::Tab
              @route="settings.ministers"
              data-test-route-settings-manage-ministers
            >
              {{t "manage-ministers"}}
            </Auk::Tab>
            {{#if (user-may "manage-users")}}
              <Auk::Tab
                @route="settings.users"
                data-test-route-settings-manage-users
              >
                {{t "manage-users"}}
              </Auk::Tab>
              <Auk::Tab
                @route="settings.organizations"
                data-test-route-settings-manage-organizations
              >
                {{t "manage-organizations"}}
              </Auk::Tab>
            {{/if}}
          </Auk::Tabs>
        </Auk::Toolbar::Item>
      </Auk::Toolbar::Group>
    </Auk::Toolbar>
  </Auk::Navbar>
  <div class="auk-scroll-wrapper__body">
    {{outlet}}
  </div>
</div>
