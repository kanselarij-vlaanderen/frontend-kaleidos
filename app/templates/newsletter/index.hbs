<div class="auk-scroll-wrapper__body">
  <div class="auk-u-m-8">
    <table
      data-test-route-newsletter-data-table
      class="auk-table auk-table--striped"
    >
      <thead class="lt-head">
        <tr class="lt-scaffolding-row"></tr>
        <tr>
          <Utils::ThSortable
            class="lt-column align-left"
            @currentSorting={{this.sort}}
            @field="number"
            @label="#"
            @onChange={{fn (mut this.sort)}}
          />
          <th class="lt-column align-left auk-table__col--7">
            {{t "title-and-content"}}
          </th>
          <th class="lt-column align-left">{{t "minister"}}</th>
          {{! Note: We are sorting on two keys below. In-newsletter property changes order,
                      while we want number to stay ordered ascending }}
          <Utils::ThSortable
            class="lt-column align-left"
            @currentSorting={{this.sort}}
            @field="treatment.newsItem.inNewsletter,number"
            @label={{t "show-in-newsletter"}}
            @onChange={{fn (mut this.sort)}}
          />
          <Utils::ThSortable
            class="lt-column align-left"
            @currentSorting={{this.sort}}
            @field="treatment.newsItem.modified"
            @label={{t "latest-modified"}}
            @onChange={{fn (mut this.sort)}}
          />
          <th class="c-table__header c-table__header--actions"></th>
        </tr>
      </thead>
      <tbody>
        {{#each this.model as |item|}}
          <NewsItem::TableRow
            @agendaitem={{item.agendaitem}}
            @newsItem={{item.newsItem}}
            @onSave={{perform this.saveNewsItem}}
            @onCancel={{this.cancelEdit}}
          />
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
{{outlet}}