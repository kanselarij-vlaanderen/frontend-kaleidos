{{#if this.isLoadingModel}}
  <AuModal
    @modalOpen={{true}}
    @closeModal={{this.transitionBack}}
    @size="fullscreen"
    @padding="none"
  >
    <:title>
      <Auk::Loader />
    </:title>
    <:body>
      <WebComponents::LoadingPage />
    </:body>
  </AuModal>
{{else if this.isMobile}}
  <Documents::DocumentPreview::MobileDocumentPreview
    @piece={{this.model}}
    @onClose={{this.transitionBack}}
    @tab={{this.tab}}
    @onSelectVersion={{this.setSelectedVersion}}
    @onTabChanged={{this.tabChanged}}
  />
{{else}}
  <Documents::DocumentPreview::DocumentPreviewModal
    @piece={{this.model}}
    @onClose={{this.transitionBack}}
    @didDeletePiece={{this.didDeletePiece}}
    @tab={{this.tab}}
    @onSelectVersion={{this.setSelectedVersion}}
    @onTabChanged={{this.tabChanged}}
  />
{{/if}}
